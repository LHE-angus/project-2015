<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
	<!-- ======================================== Form Bean Definitions -->
	<form-beans>
		<form-bean name="lazyForm" type="org.apache.struts.validator.LazyValidatorForm" />
		<form-bean name="fullLazyForm" type="org.apache.struts.validator.LazyValidatorForm">
			<form-property name="pager" type="com.ebiz.ssi.web.struts.bean.Pager" />
			<form-property name="imageField" type="org.apache.struts.util.ImageButtonBean" />
			<form-property name="pks" type="java.lang.String[]" />
		</form-bean>
	</form-beans>

	<global-forwards>
		<forward name="login" path="login.do" redirect="true" />
	</global-forwards>

	<action-mappings>
	
		<action path="/login" attribute="loginForm" name="lazyForm" type="com.ebiz.mmt.web.struts.wage.LoginAction"
			parameter="method" scope="request" validate="false">
			<forward name="success" path="/Search.do?method=list" redirect="true" />
			<forward name="login" path="/login.jsp" />
			<forward name="index" path="/manager/EShop.do" redirect="true" />
			<forward name="register" path="/Register.do?method=add" redirect="true" />
		</action>
		
		<action path="/*" attribute="af" name="fullLazyForm" type="com.ebiz.mmt.web.struts.wage.{1}Action"
			parameter="method" scope="request" validate="false">
			<forward name="index" path="/{1}/index.jsp" />
			<forward name="list" path="/{1}/list.jsp" />
			<forward name="view" path="/{1}/view.jsp" />
			<forward name="input" path="/{1}/form.jsp" />
			<forward name="success" path="/{1}.do?method=list" redirect="true" />
			
			<forward name="reg_success" path="/{1}.do?method=success" redirect="true" />
			<forward name="update_success" path="/{1}/success.jsp" />
			
			<forward name="excel" path="/{1}/excel.jsp" />
		</action>
		

	</action-mappings>

	<!--<controller maxFileSize="2M" />-->

	<!-- =================================== Message Resources Definitions -->
	<message-resources parameter="/i18n/messages" />
</struts-config>