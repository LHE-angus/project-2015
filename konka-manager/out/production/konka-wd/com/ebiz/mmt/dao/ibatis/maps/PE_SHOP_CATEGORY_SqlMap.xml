<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="PE_SHOP_CATEGORY">

	<typeAlias alias="peShopCategory" type="com.ebiz.mmt.domain.PeShopCategory" />

	

	<resultMap id="peShopCategoryResultForList" class="peShopCategory">
		<result column="CATEGORY_ID" property="category_id" jdbcType="DECIMAL" />
		<result column="CATEGORY_PID" property="category_pid" jdbcType="DECIMAL" />
		<result column="CATEGORY_NAME" property="category_name" jdbcType="VARCHAR" />
		<result column="CATEGORY_DESC" property="category_desc" jdbcType="VARCHAR" />
		<result column="DEPT_ID" property="dept_id" jdbcType="VARCHAR" />
		<result column="ENTP_ID" property="entp_id" jdbcType="DECIMAL" />
		<result column="ADD_E_USER_ID" property="add_e_user_id" jdbcType="DECIMAL" />
		<result column="ADD_USER_ID" property="add_user_id" jdbcType="DECIMAL" />
		<result column="ADD_DATE" property="add_date" jdbcType="DATETIME" />
		<result column="IS_DEL" property="is_del" jdbcType="DECIMAL" />
		<result column="IS_LOCK" property="is_lock" jdbcType="DECIMAL" />
	</resultMap>

	<resultMap id="peShopCategoryResult" class="peShopCategory" extends="peShopCategoryResultForList">
	</resultMap>

	<resultMap id="peShopCategoryWithNameResult" class="peShopCategory" extends="peShopCategoryResultForList">
		<result column="USER_NAME" property="map.user_name" jdbcType="VARCHAR" />
		<result column="DEPT_NAME" property="map.dept_name" jdbcType="VARCHAR" />
	</resultMap>

	<resultMap id="peShopCategoryResultWithLevel" class="peShopCategory" extends="peShopCategoryResultForList">
		<result column="LEVEL" property="map.level" jdbcType="DECIMAL" />
	</resultMap>

	<sql id="sf-peShopCategory">
		<isNotEmpty prepend=" and " property="category_id">a.CATEGORY_ID = #category_id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="category_pid">a.CATEGORY_PID = #category_pid:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="category_name">a.CATEGORY_NAME = #category_name:VARCHAR#</isNotEmpty>
		<isNotEmpty prepend=" and " property="category_desc">a.CATEGORY_DESC = #category_desc:VARCHAR#</isNotEmpty>
		<isNotEmpty prepend=" and " property="dept_id">a.DEPT_ID = #dept_id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="entp_id">a.ENTP_ID = #entp_id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="add_e_user_id">a.ADD_E_USER_ID = #add_e_user_id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="add_user_id">a.ADD_USER_ID = #add_user_id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="add_date">a.ADD_DATE = #add_date:DATE#</isNotEmpty>
		<isNotEmpty prepend=" and " property="is_del">a.IS_DEL = #is_del:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="is_lock">a.IS_LOCK = #is_lock:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="map.category_id_not_eq">category_id != #map.category_id_not_eq:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="map.category_name_like">UPPER(category_name) like '%' ||
			UPPER(#map.category_name_like:VARCHAR#) || '%'</isNotEmpty>
		<isNotEmpty prepend=" and " property="map.selects">category_id in ($map.selects$)</isNotEmpty>
	</sql>

	<select id="selectPeShopCategory" resultMap="peShopCategoryWithNameResult" parameterClass="peShopCategory"
		>
		select a.*,b.user_name,s.dept_name from KONKA_PE_SHOP_CATEGORY a
		left join konka_pe_prod_user b on a.add_user_id=b.id
		left join KONKA_DEPT s on a.dept_id=s.dept_id
		where 1 = 1
		<include refid="sf-peShopCategory" />
	</select>

	<select id="selectPeShopCategoryListWithLevel" resultMap="peShopCategoryResultWithLevel" parameterClass="peShopCategory"
		>
		select a.*,level from KONKA_PE_SHOP_CATEGORY a where 1 = 1
		<isNotEmpty prepend=" and " property="dept_id">
			(dept_id = #dept_id:DECIMAL# or is_lock = 1) 
		</isNotEmpty>
		<isNotEmpty prepend=" and " property="map.category_selects">category_id in ($map.category_selects$)</isNotEmpty>
		and is_del = 0
		start with a.CATEGORY_PID = 0 connect by prior a.CATEGORY_ID = a.CATEGORY_PID
	</select>

	<select id="selectPeShopCategoryList" resultMap="peShopCategoryResultForList" parameterClass="peShopCategory"
		>
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
		select * from KONKA_PE_SHOP_CATEGORY a where 1 = 1
		<include refid="sf-peShopCategory" />
		<!-- order by ID asc -->
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>

	<select id="selectPeShopCategoryCount" resultClass="long" parameterClass="peShopCategory" >
		select count(*) from (
				<isNotEmpty prepend=" " property="map.role_id_20">select * from KONKA_PE_SHOP_CATEGORY where is_lock = 1 and is_del = 0 union</isNotEmpty>
				select * from KONKA_PE_SHOP_CATEGORY a where 1 = 1  <include refid="sf-peShopCategory" />
			  )
	</select>

	<select id="selectPeShopCategoryPaginatedList" resultMap="peShopCategoryWithNameResult" parameterClass="peShopCategory"
		>
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
		select a.*,'null' as user_name,c.dept_name from (
		<isNotEmpty prepend=" " property="map.role_id_20">select * from KONKA_PE_SHOP_CATEGORY where is_lock = 1 and is_del = 0 union</isNotEmpty>
		select * from KONKA_PE_SHOP_CATEGORY a where 1 = 1
		<include refid="sf-peShopCategory" />
		) a
		left join KONKA_DEPT c on a.dept_id=c.dept_id
		order by a.category_id desc
		<![CDATA[ ) t_ where rownum <= (#row.first# + #row.count#)) where rn_ >= (#row.first# + 1) ]]>
	</select>

	<select id="selectPeShopCategoryWithNameCount" resultClass="long" parameterClass="peShopCategory" >
		select count(*) from KONKA_PE_SHOP_CATEGORY a left join KONKA_PE_PROD_USER b on a.add_e_user_id = b.id
		where 1 = 1
		<isNotEmpty prepend=" and " property="add_e_user_id">a.ADD_E_USER_ID = #add_e_user_id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="is_del">a.IS_DEL = #is_del:DECIMAL#</isNotEmpty>
		<isNotEmpty property="map.category_name_like" prepend=" AND ">UPPER(a.category_name) like '%' ||
			UPPER(#map.category_name_like:VARCHAR#) || '%'</isNotEmpty>
		<isNotEmpty property="map.par_user_id" prepend=" AND ">a.add_e_user_id in (select id from konka_pe_prod_user where
			is_del = 0 and (add_e_user_id = #map.par_user_id:DECIMAL# or id = #map.par_user_id:DECIMAL#))
		</isNotEmpty>
	</select>

	<select id="selectPeShopCategoryWithNamePaginatedList" resultMap="peShopCategoryWithNameResult" parameterClass="peShopCategory"
		>
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
		select a.*, b.user_name from KONKA_PE_SHOP_CATEGORY a left join KONKA_PE_PROD_USER b on a.add_e_user_id = b.id
		where 1=
		1
		<isNotEmpty prepend=" and " property="add_e_user_id">a.ADD_E_USER_ID = #add_e_user_id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="is_del">a.IS_DEL = #is_del:DECIMAL#</isNotEmpty>
		<isNotEmpty property="map.category_name_like" prepend=" AND ">UPPER(a.category_name) like '%' ||
			UPPER(#map.category_name_like#) || '%'</isNotEmpty>
		<isNotEmpty property="map.par_user_id" prepend=" AND ">a.add_e_user_id in (select id from konka_pe_prod_user where
			is_del = 0 and (add_e_user_id = #map.par_user_id:DECIMAL# or id = #map.par_user_id:DECIMAL#))
		</isNotEmpty>
		order by a.add_date desc, a.category_id desc
		<![CDATA[ ) t_ where rownum <= (#row.first# + #row.count#)) where rn_ >= (#row.first# + 1) ]]>
	</select>

	<insert id="insertPeShopCategory" parameterClass="peShopCategory">
		<selectKey resultClass="long" keyProperty="category_id">select KONKA_PROD_SEQUENCE.nextval as category_id from dual
		</selectKey>
		<![CDATA[insert into KONKA_PE_SHOP_CATEGORY (]]>
		<dynamic prepend=" ">
			<isNotNull prepend="," property="category_id">CATEGORY_ID</isNotNull>
			<isNotNull prepend="," property="category_pid">CATEGORY_PID</isNotNull>
			<isNotNull prepend="," property="category_name">CATEGORY_NAME</isNotNull>
			<isNotNull prepend="," property="category_desc">CATEGORY_DESC</isNotNull>
			<isNotNull prepend="," property="dept_id">DEPT_ID</isNotNull>
			<isNotNull prepend="," property="entp_id">ENTP_ID</isNotNull>
			<isNotNull prepend="," property="add_e_user_id">ADD_E_USER_ID</isNotNull>
			<isNotNull prepend="," property="add_user_id">ADD_USER_ID</isNotNull>
			<isNotNull prepend="," property="add_date">ADD_DATE</isNotNull>
			<isNotNull prepend="," property="is_del">IS_DEL</isNotNull>
			<isNotNull prepend="," property="is_lock">IS_LOCK</isNotNull>
		</dynamic>
		<![CDATA[) values (]]>
		<dynamic prepend=" ">
			<isNotNull prepend="," property="category_id">#category_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="category_pid">#category_pid:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="category_name">#category_name:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="category_desc">#category_desc:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="dept_id">#dept_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="entp_id">#entp_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="add_e_user_id">#add_e_user_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="add_user_id">#add_user_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="add_date">#add_date:DATETIME#</isNotNull>
			<isNotNull prepend="," property="is_del">#is_del:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="is_lock">#is_lock:DECIMAL#</isNotNull>
		</dynamic>
		<![CDATA[)]]>
	</insert>

	<update id="updatePeShopCategory" parameterClass="PeShopCategory">
		update KONKA_PE_SHOP_CATEGORY
		<dynamic prepend="set">
			<isNotNull prepend="," property="category_id">CATEGORY_ID = #category_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="category_pid">CATEGORY_PID = #category_pid:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="category_name">CATEGORY_NAME = #category_name:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="category_desc">CATEGORY_DESC = #category_desc:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="dept_id">DEPT_ID = #dept_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="entp_id">ENTP_ID = #entp_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="add_e_user_id">ADD_E_USER_ID = #add_e_user_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="add_user_id">ADD_USER_ID = #add_user_id:DECIMAL#</isNotNull>
			<!-- <isNotNull prepend="," property="add_date">ADD_DATE = #add_date:DATE#</isNotNull> -->
			<isNotNull prepend="," property="is_del">IS_DEL = #is_del:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="is_lock">IS_LOCK = #is_lock:DECIMAL#</isNotNull>
		</dynamic>
		where
		<isNotEmpty prepend=" " property="category_id">CATEGORY_ID = #category_id#</isNotEmpty>
		<isEmpty prepend=" " property="category_id">
			<isNotEmpty prepend=" " property="map.pks">
			 CATEGORY_ID in(
				select a.category_id
				  from KONKA_PE_SHOP_CATEGORY a
				 start with a.CATEGORY_PID in <iterate close=")" open="(" conjunction="," property="map.pks">#map.pks[]#</iterate>
				connect by prior a.CATEGORY_ID = a.CATEGORY_PID
				union
				select a.category_id
				  from KONKA_PE_SHOP_CATEGORY a
				  where a.CATEGORY_ID in <iterate close=")" open="(" conjunction="," property="map.pks">#map.pks[]#</iterate>
				)
			</isNotEmpty>
		</isEmpty>
	</update>

	<delete id="deletePeShopCategory" parameterClass="PeShopCategory">
		delete from KONKA_PE_SHOP_CATEGORY where
		<isNotEmpty prepend=" " property="category_id">CATEGORY_ID = #category_id#</isNotEmpty>
		<isEmpty prepend=" " property="category_id">
			<isNotEmpty prepend=" " property="map.pks">
				CATEGORY_ID in
				<iterate close=")" open="(" conjunction="," property="map.pks">#map.pks[]#</iterate>
			</isNotEmpty>
		</isEmpty>
	</delete>

</sqlMap>