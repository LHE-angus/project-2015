<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="KONKA_MOD_POPEDOM">
	<typeAlias alias="modPopedom" type="com.ebiz.mmt.domain.ModPopedom" />

	

	<resultMap id="modPopedomResultForList" class="modPopedom">
		<result column="ID" property="id" jdbcType="DECIMAL" />
		<result column="MOD_ID" property="mod_id" jdbcType="DECIMAL" />
		<result column="USER_ID" property="user_id" jdbcType="DECIMAL" />
		<result column="ROLE_ID" property="role_id" jdbcType="DECIMAL" />
		<result column="PPDM_CODE" property="ppdm_code" jdbcType="DECIMAL" />
	</resultMap>

	<resultMap id="modPopedomResult" class="modPopedom" extends="modPopedomResultForList">
		<result column="PPDM_DETAIL" property="map.ppdm_detail" jdbcType="VARCHAR" />
	</resultMap>

	<sql id="sf-modPopedom">
		<isNotEmpty prepend=" and " property="id">a.ID = #id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="mod_id">a.MOD_ID = #mod_id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="user_id">a.USER_ID = #user_id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="role_id">a.ROLE_ID = #role_id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="ppdm_code">a.PPDM_CODE = #ppdm_code:DECIMAL#</isNotEmpty>
	</sql>

	<select id="selectModPopedom" resultMap="modPopedomResult" parameterClass="modPopedom" >
		select a.*, b.ppdm_detail from KONKA_MOD_POPEDOM a, KONKA_BASE_POPEDOM b where a.ppdm_code = b.ppdm_code
		<include refid="sf-modPopedom" />
	</select>

	<select id="selectModPopedomList" resultMap="modPopedomResultForList" parameterClass="modPopedom" >
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
		select * from KONKA_MOD_POPEDOM a where 1 = 1
		<include refid="sf-modPopedom" />
		<!-- order by ID asc -->
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>

	<select id="selectModPopedomCount" resultClass="long" parameterClass="modPopedom" >
		select count(*) from KONKA_MOD_POPEDOM a where 1 = 1
		<include refid="sf-modPopedom" />
	</select>

	<select id="selectModPopedomPaginatedList" resultMap="modPopedomResult" parameterClass="modPopedom" >
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
		select * from KONKA_MOD_POPEDOM a where 1 = 1
		<include refid="sf-modPopedom" />
		<!-- order by ID asc -->
		<![CDATA[ ) t_ where rownum <= (#row.first# + #row.count#)) where rn_ >= (#row.first# + 1) ]]>
	</select>

	<insert id="insertModPopedom" parameterClass="modPopedom">
		<selectKey resultClass="long" keyProperty="id">select KONKA_S_BASE.nextval as id from dual</selectKey>
		<![CDATA[insert into KONKA_MOD_POPEDOM (]]>
		<dynamic prepend=" ">
			<isNotNull prepend="," property="id">ID</isNotNull>
			<isNotNull prepend="," property="mod_id">MOD_ID</isNotNull>
			<isNotNull prepend="," property="user_id">USER_ID</isNotNull>
			<isNotNull prepend="," property="role_id">ROLE_ID</isNotNull>
			<isNotNull prepend="," property="ppdm_code">PPDM_CODE</isNotNull>
		</dynamic>
		<![CDATA[) values (]]>
		<dynamic prepend=" ">
			<isNotNull prepend="," property="id">#id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="mod_id">#mod_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="user_id">#user_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="role_id">#role_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="ppdm_code">#ppdm_code:DECIMAL#</isNotNull>
		</dynamic>
		<![CDATA[)]]>
	</insert>

	<update id="updateModPopedom" parameterClass="modPopedom">
		update KONKA_MOD_POPEDOM
		<dynamic prepend="set">
			<isNotNull prepend="," property="mod_id">MOD_ID = #mod_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="user_id">USER_ID = #user_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="role_id">ROLE_ID = #role_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="ppdm_code">PPDM_CODE = #ppdm_code:DECIMAL#</isNotNull>
		</dynamic>
		where
		<isNotEmpty prepend=" " property="id">ID = #id#</isNotEmpty>
		<isEmpty prepend=" " property="id">
			<isNotEmpty prepend=" " property="map.pks">
				ID in
				<iterate close=")" open="(" conjunction="," property="map.pks">#map.pks[]#</iterate>
			</isNotEmpty>
		</isEmpty>
	</update>

	<delete id="deleteModPopedom" parameterClass="modPopedom">
		delete from KONKA_MOD_POPEDOM where
		<!--
			hui,gang 2009/12/19 <isNotEmpty prepend=" " property="id">ID = #id#</isNotEmpty> <isEmpty prepend=" " property="id">
			<isNotEmpty prepend=" " property="map.pks"> ID in <iterate close=")" open="(" conjunction=","
			property="map.pks">#map.pks[]#</iterate> </isNotEmpty> </isEmpty>
		-->
		<isNotEmpty prepend=" " property="user_id">
			user_id = #user_id:DECIMAL# 
		</isNotEmpty>
		<isNotEmpty prepend=" " property="role_id">
			role_id = #role_id:DECIMAL# 
		</isNotEmpty>
	</delete>

</sqlMap>