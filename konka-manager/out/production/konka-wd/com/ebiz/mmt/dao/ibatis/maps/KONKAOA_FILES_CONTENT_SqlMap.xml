<sqlMap namespace="FILES_CONTENT">
	
	<typeAlias alias="filesContent" type="com.ebiz.mmt.domain.KonkaoaFilesContent" />

	

	<resultMap id="filesContentResultForList" class="filesContent">
		<result column="ID" property="id" jdbcType="DECIMAL" />
		<result column="LINK_ID" property="link_id" jdbcType="DECIMAL" />
		<result column="CONTENT" property="content" jdbcType="VARCHAR" />
	</resultMap>

	<resultMap id="filesContentResult" class="filesContent" extends="filesContentResultForList">
	</resultMap>

	<sql id="sf-filesContent">
		<isNotEmpty prepend=" and " property="id">ID = #id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="link_id">LINK_ID = #link_id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="content">CONTENT = #content:VARCHAR#</isNotEmpty>
	</sql>

	<select id="selectKonkaoaFilesContent" resultMap="filesContentResult" parameterClass="filesContent" >
		select * from KONKAOA_FILES_CONTENT where 1 = 1
		<include refid="sf-filesContent" />
	</select>

	<select id="selectKonkaoaFilesContentList" resultMap="filesContentResultForList" parameterClass="filesContent" >
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
		select * from KONKAOA_FILES_CONTENT where 1 = 1
		<include refid="sf-filesContent" />
		<!-- order by ID asc -->
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>

	<select id="selectKonkaoaFilesContentCount" resultClass="long" parameterClass="filesContent" >
		select count(*) from KONKAOA_FILES_CONTENT where 1 = 1
		<include refid="sf-filesContent" />
	</select>

	<select id="selectKonkaoaFilesContentPaginatedList" resultMap="filesContentResult" parameterClass="filesContent" >
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
		select * from KONKAOA_FILES_CONTENT where 1 = 1
		<include refid="sf-filesContent" />
		<!-- order by ID asc -->
		<![CDATA[ ) t_ where rownum <= (#row.first# + #row.count#)) where rn_ >= (#row.first# + 1) ]]>
	</select>

	<insert id="insertKonkaoaFilesContent" parameterClass="filesContent">
		<selectKey resultClass="long" keyProperty="id">select KONKA_ARTICLE_ID_SEQ.nextval as id from dual</selectKey>
		<![CDATA[insert into KONKAOA_FILES_CONTENT (]]>
		<dynamic prepend=" ">
			<isNotNull prepend="," property="id">ID</isNotNull>	
			<isNotNull prepend="," property="link_id">LINK_ID</isNotNull>	
			<isNotNull prepend="," property="content">CONTENT</isNotNull>	
		</dynamic>
		<![CDATA[) values (]]>
		<dynamic prepend=" ">
			<isNotNull prepend="," property="id">#id:DECIMAL#</isNotNull>	
			<isNotNull prepend="," property="link_id">#link_id:DECIMAL#</isNotNull>	
			<isNotNull prepend="," property="content">#content:VARCHAR#</isNotNull>	
		</dynamic>
		<![CDATA[)]]>
	</insert>

	<update id="updateKonkaoaFilesContent" parameterClass="filesContent">
		update KONKAOA_FILES_CONTENT
		<dynamic prepend="set">
			<isNotNull prepend="," property="id">ID = #id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="link_id">LINK_ID = #link_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="content">CONTENT = #content:VARCHAR#</isNotNull>
		</dynamic>
		where
		<isNotEmpty prepend=" " property="link_id">LINK_ID = #link_id#</isNotEmpty>
		<isNotEmpty prepend=" " property="id">ID = #id#</isNotEmpty>
		<isEmpty prepend=" " property="id">
			<isNotEmpty prepend=" " property="map.pks">
				ID in
				<iterate close=")" open="(" conjunction="," property="map.pks">#map.pks[]#</iterate>
			</isNotEmpty>
		</isEmpty>
	</update>

	<delete id="deleteKonkaoaFilesContent" parameterClass="filesContent">
		delete from KONKAOA_FILES_CONTENT where
		<isNotEmpty prepend=" " property="id">ID = #id#</isNotEmpty>
		<isEmpty prepend=" " property="id">
			<isNotEmpty prepend=" " property="map.pks">
				ID in
				<iterate close=")" open="(" conjunction="," property="map.pks">#map.pks[]#</iterate>
			</isNotEmpty>
		</isEmpty>
