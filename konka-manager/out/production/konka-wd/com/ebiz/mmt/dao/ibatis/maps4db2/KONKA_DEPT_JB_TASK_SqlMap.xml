	<select id="selectKonkaDeptJbTaskForBackMoneyList" resultMap="konkaR3BackmoneyForHkJd" parameterClass="konkaDeptJbTask" cacheModel="oneDayCache">
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
		SELECT t3.*,
       decode ( (t3.TASK * t3.TASK_MONEY),
               NULL,
               0,
               0,
               0,
               decode (t3.hk_money,
                       NULL,
                       0,
                       hk_money)
               / (t3.TASK_MONEY))
       * 100
          AS hk_wcl,
           decode ( t3.l_hk_money,
               NULL,
               0,
               0,
               0,
               (decode (t3.hk_money,
                       NULL,
                       0,
                       hk_money)-t3.l_hk_money)
               / t3.l_hk_money)
       * 100
          AS hk_zzl
  FROM (SELECT t1.*, t2.l_hk_money
          FROM    (SELECT aa.JB_NAME,
                          aa.DEPT_NAME,
                          aa.JB_JL,
                          aa.JB_TYPE,
                          aa.TASK_MONEY,
                          aa.task,aa.jb_type,
                          sum ($map.column_value$) AS hk_money
                     FROM    KONKA_DEPT_JB_TASK aa
                          LEFT JOIN
                             konka_r3_backmoney bb
                          ON aa.r3_code = bb.r3_code 
                    WHERE aa.r3_code IS NOT NULL and aa.year = bb.year AND aa.YEAR = #map.this_year# and aa.month = #map.this_month#
             <isNotEmpty prepend=" and " property="map.jb_type_4">aa.JB_TYPE in (1,2,3)</isNotEmpty>
			 <isNotEmpty prepend=" and " property="map.jb_type">aa.JB_TYPE = #map.jb_type#</isNotEmpty>
			 <isNotEmpty prepend=" and " property="map.r3_code_like">aa.R3_CODE like '%'||#map.r3_code_like:VARCHAR#||'%'</isNotEmpty>
                   GROUP BY aa.JB_NAME,
                            aa.DEPT_NAME,
                            aa.JB_JL,
                            aa.JB_TYPE,
                            aa.task_money,
                            aa.task,aa.jb_type) t1
               LEFT JOIN
                  (SELECT aa.JB_NAME AS jb_name_2,
                          aa.DEPT_NAME AS dept_name_2,
                          aa.JB_JL AS jb_jl_2,
                          aa.JB_TYPE AS jb_type_2,
                          sum ($map.column_value$) AS l_hk_money
                     FROM    KONKA_DEPT_JB_TASK aa
                          LEFT JOIN
                             konka_r3_backmoney bb
                          ON aa.r3_code = bb.r3_code 
                    WHERE aa.r3_code IS NOT NULL and aa.year = bb.year AND aa.YEAR = #map.last_year# and aa.month = #map.this_month#
             <isNotEmpty prepend=" and " property="map.jb_type_4">aa.JB_TYPE in (1,2,3)</isNotEmpty>
			 <isNotEmpty prepend=" and " property="map.jb_type">aa.JB_TYPE = #map.jb_type#</isNotEmpty>
			 <isNotEmpty prepend=" and " property="map.r3_code_like">aa.R3_CODE like '%'||#map.r3_code_like:VARCHAR#||'%'</isNotEmpty>
                   GROUP BY aa.JB_NAME,
                            aa.DEPT_NAME,
                            aa.JB_JL,
                            aa.JB_TYPE) t2
               ON t1.JB_NAME = t2.jb_name_2) t3
		<!-- order by ID asc -->
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>

