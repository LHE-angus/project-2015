	<select id="selectEcBaseStore" resultMap="ecBaseStoreResult" parameterClass="ecBaseStore" cacheModel="oneDayCache">
		select * from EC_BASE_STORE where 1 = 1
		<include refid="sf-ecBaseStore" />
	</select>

	<select id="selectEcBaseStoreList" resultMap="ecBaseStoreResultForList" parameterClass="ecBaseStore" cacheModel="oneDayCache">
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
		select * from EC_BASE_STORE where 1 = 1
		<include refid="sf-ecBaseStore" />
		<!-- order by ID asc -->
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>
	
	<!-- Pan,Gang -->
	<select id="selectEcBaseStoreForAreaCount" resultClass="long" parameterClass="ecBaseStore" cacheModel="oneDayCache">
		select count(*) from ec_base_store t left join ec_store_area a 
		on t.store_id = a.store_id where  1 = 1 
		<include refid="sf-ecBaseStore-t" />
		<isNotEmpty prepend=" and " property="map.pindex_id">
			a.pindex_id = #map.pindex_id#
		</isNotEmpty>
	</select>
	
	<select id="selectEcBaseStoreForAreaForList" resultMap="ecBaseStoreResultForPindexIdList" parameterClass="ecBaseStore" cacheModel="oneDayCache">
		select t.*,a.pindex_id as pindex_id from ec_base_store t left join ec_store_area a 
		on t.store_id = a.store_id where  1 = 1 
		<include refid="sf-ecBaseStore-t" />
	</select>
	
	<select id="selectEcBaseStoreForPindexIdForList" resultMap="ecBaseStoreResultForPindexIdList" parameterClass="ecBaseStore" cacheModel="oneDayCache">
			SELECT a.PINDEX_ID AS p_index,a.P_NAME AS p_name
			FROM ec_base_store t LEFT JOIN EC_STORE_AREA a ON t.STORE_ID = a.STORE_ID
			 WHERE 1 = 1 AND t.STORE_TYPE = 1 and t.STORE_ID is not null
			 <include refid="sf-ecBaseStore-t" />
		     
	</select>
	
	
	<select id="selectEcBaseStoreForPdList" resultMap="ecBaseStoreResultForPdList" parameterClass="ecBaseStore" cacheModel="oneDayCache">
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
			select t.*,b.pd_name as pd_name from ec_base_store t
	       	left join ec_stocks a  on t.store_id = a.store_id
	       	left join konka_bcomp_pd b on b.id = a.goods_id
 			where 1 = 1  
		<include refid="sf-ecBaseStore-t" />
		<isNotEmpty prepend=" and " property="map.pd_id_eq">
			b.id = #map.pd_id_eq#
		</isNotEmpty>
		<!-- order by ID asc -->
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>
	
	<select id="selectEcBaseStoreForPindexAndPnameList" resultMap="ecBaseStoreResultForPindexIdAndPnameList" parameterClass="ecBaseStore" cacheModel="oneDayCache">
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
			SELECT t.p_index ,t.P_NAME
			  FROM KONKA_BASE_PROVINCE_LIST_FOUR t
			 WHERE t.P_LEVEL = 1 
			       AND p_index NOT IN (SELECT t.PINDEX_ID
			                           FROM    ec_base_store a
                                  LEFT JOIN
                                     EC_STORE_AREA t
                                  ON t.STORE_ID = a.STORE_ID
                            WHERE 1 = 1 AND a.STORE_TYPE = 1 and t.STORE_ID is not null) 
		<!-- order by ID asc -->
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>
	
	

	<select id="selectEcBaseStoreCount" resultClass="long" parameterClass="ecBaseStore" cacheModel="oneDayCache">
		select count(*) from EC_BASE_STORE where 1 = 1
		<include refid="sf-ecBaseStore" />
	</select>

	<select id="selectEcBaseStorePaginatedList" resultMap="ecBaseStoreResult" parameterClass="ecBaseStore" cacheModel="oneDayCache">
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
		select * from EC_BASE_STORE where 1 = 1
		<include refid="sf-ecBaseStore" />
		<!-- order by ID asc -->
		<![CDATA[ ) t_ where rownum <= (#row.first# + #row.count#)) where rn_ >= (#row.first# + 1) ]]>
	</select>
	
	<select id="selectEcBaseStoreForDeptCount" resultClass="long" parameterClass="ecBaseStore" cacheModel="oneDayCache">
		select count(*) from EC_BASE_STORE t left join konka_dept a on t.dept_id = a.dept_id where 1 = 1
		<include refid="sf-ecBaseStore-t" />
	</select>
	
	<select id="selectEcBaseStoreForDeptNamePaginatedList" resultMap="ecBaseStoreResultForDeptNameList" parameterClass="ecBaseStore" cacheModel="oneDayCache">
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
		select t.*,a.dept_name as dept_name from EC_BASE_STORE t left join konka_dept a on t.dept_id = a.dept_id where 1 = 1
		<include refid="sf-ecBaseStore-t" />
		<!-- order by ID asc -->
		<![CDATA[ ) t_ where rownum <= (#row.first# + #row.count#)) where rn_ >= (#row.first# + 1) ]]>
	</select>
	

