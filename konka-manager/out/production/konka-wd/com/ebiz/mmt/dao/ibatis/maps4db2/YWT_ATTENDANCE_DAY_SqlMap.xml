	<!--    连表查用户名count-->
	<select id="selectYwtAttendanceDayLBCount" resultClass="long" parameterClass="ywtAttendanceDay" cacheModel="oneDayCache">
		SELECT count(*)
           FROM YWT_ATTENDANCE_DAY atte_day
		       LEFT JOIN KONKA_PE_PROD_USER ywy_user
		          ON atte_day.USER_ID = ywy_user.ID
		       LEFT JOIN KONKA_PE_PROD_USER adduser
		          ON atte_day.ADD_USER_ID = adduser.ID
		      WHERE 1=1
		    <isNotEmpty prepend=" and " property="map._is_lock">
		      atte_day.IS_LOCK = #map._is_lock:DECIMAL#
		    </isNotEmpty>
		    <isNotEmpty prepend=" and " property="map._sign_in_date">
                      <![CDATA[ atte_day.SIGN_IN_DATE >= to_date (#map._sign_in_date:VARCHAR#, 'yyyy-mm-dd') ]]>
            </isNotEmpty>
		    <isNotEmpty prepend=" and " property="map._sign_out_date">
		         <![CDATA[ atte_day.SIGN_OUT_DATE <= to_date (#map._sign_out_date:VARCHAR#, 'yyyy-mm-dd') ]]>
		    </isNotEmpty>
		    <isNotEmpty prepend=" and " property="map._real_name_like">
		       atte_day.USER_ID IN
              (SELECT yw_user.ID
                 FROM KONKA_PE_PROD_USER yw_user
                WHERE yw_user.REAL_NAME LIKE '%' || #map._real_name_like:VARCHAR# || '%')
