		delete from KONKA_PD_MODEL_PROPS_VAL where
		<isNotEmpty prepend=" " property="id">ID = #id#</isNotEmpty>
		<isNotEmpty prepend=" " property="pd_id">PD_ID = #pd_id:DECIMAL#</isNotEmpty>
		<isEmpty prepend=" " property="id">
