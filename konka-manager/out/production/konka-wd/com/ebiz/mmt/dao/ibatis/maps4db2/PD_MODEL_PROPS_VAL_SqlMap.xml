	</sql>

	<select id="selectPdModelPropsVal" resultMap="pdModelPropsValResult" parameterClass="pdModelPropsVal" >
		select * from KONKA_PD_MODEL_PROPS_VAL where 1 = 1
		<include refid="sf-pdModelPropsVal" />
	</select>

	<select id="selectPdModelPropsValList" resultMap="pdModelPropsValResultForMdNameList" parameterClass="pdModelPropsVal" >
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
		 select a.*, b.md_name
	 	 from KONKA_PD_MODEL_PROPS_VAL a
	  	 left join konka_pe_pd_model b on a.pd_id = b.pd_id
	 	 where 1 = 1
		<include refid="sf-pdModelPropsVal" />
		<!-- order by ID asc -->
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>
	
	<!--Zhang,Xufeng 2011-11-17 按规格分组	-->
	<select id="selectPdModelPropsValGroupByList" resultClass="java.lang.String" parameterClass="pdModelPropsVal" >
		select distinct(a.prop_value)  from konka_pd_model_props_val a 
		where 1=1 
		<isNotEmpty prepend=" and " property="prop_id">
			a.PROP_ID = #prop_id:DECIMAL# and a.prop_value is not null 
		</isNotEmpty>
    	group by  a.prop_value
    	order by  a.prop_value
	</select>
	
	<select id="selectPdModelPropsValWithPropInfoList" resultMap="pdModelPropsValWithPropInfoResultForList" parameterClass="pdModelPropsVal" >
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
		select t1.*, t2.PROP_NAME, t2.PROP_VAL_TYPE, t2.PROP_UNIT from 
			(select * from KONKA_PD_MODEL_PROPS_VAL where 1 = 1
			<include refid="sf-pdModelPropsVal" />) t1 
		left join KONKA_BASE_PROP t2 on t1.PROP_ID = t2.PROP_ID
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>

	<select id="selectPdModelPropsValCount" resultClass="long" parameterClass="pdModelPropsVal" >
		select count(*) from KONKA_PD_MODEL_PROPS_VAL where 1 = 1
		<include refid="sf-pdModelPropsVal" />
	</select>

	<select id="selectPdModelPropsValPaginatedList" resultMap="pdModelPropsValResult" parameterClass="pdModelPropsVal" >
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
		select * from KONKA_PD_MODEL_PROPS_VAL where 1 = 1
		<include refid="sf-pdModelPropsVal" />
		<!-- order by ID asc -->
		<![CDATA[ ) t_ where rownum <= (#row.first# + #row.count#)) where rn_ >= (#row.first# + 1) ]]>
	</select>

