<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="SEARCH_FILTERS">

	<typeAlias alias="searchFilters" type="com.ebiz.mmt.domain.SearchFilters" />

	<cacheModel id="oneDayCache" type="OSCACHE">
		<flushInterval hours="24" />
		<flushOnExecute statement="insertSearchFilters" />
		<flushOnExecute statement="updateSearchFilters" />
		<flushOnExecute statement="deleteSearchFilters" />
	</cacheModel>

	<resultMap id="searchFiltersResultForList" class="searchFilters">
		<result column="ID" property="id" jdbcType="DECIMAL" />
		<result column="FILTER_TYPE" property="filter_type" jdbcType="DECIMAL" />
		<result column="FILTER_NAME" property="filter_name" jdbcType="VARCHAR" />
		<result column="FILTER_OBJ" property="filter_obj" jdbcType="BLOB" />
		<result column="ADD_DATE" property="add_date" jdbcType="DATETIME" />
		<result column="IS_DEL" property="is_del" jdbcType="DECIMAL" />
		<result column="ADD_USER_ID" property="add_user_id" jdbcType="DECIMAL" />
		<result column="MEMO" property="memo" jdbcType="VARCHAR" />
	</resultMap>

	<resultMap id="searchFiltersResult" class="searchFilters" extends="searchFiltersResultForList">
	</resultMap>

	<sql id="sf-searchFilters">
		<isNotEmpty prepend=" and " property="id">ID = #id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="filter_type">FILTER_TYPE = #filter_type:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="filter_name">FILTER_NAME like '%' || #filter_name:VARCHAR# || '%'</isNotEmpty>
		<isNotEmpty prepend=" and " property="filter_obj">FILTER_OBJ = #filter_obj:BLOB#</isNotEmpty>
		<isNotEmpty prepend=" and " property="add_date">ADD_DATE = #add_date:DATETIME#</isNotEmpty>
		<isNotEmpty prepend=" and " property="is_del">IS_DEL = #is_del:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="add_user_id">ADD_USER_ID = #add_user_id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="memo">MEMO = #memo:VARCHAR#</isNotEmpty>
	</sql>

	<select id="selectSearchFilters" resultMap="searchFiltersResult" parameterClass="searchFilters" cacheModel="oneDayCache">
		select * from SEARCH_FILTERS where 1 = 1
		<include refid="sf-searchFilters" />
	</select>

	<select id="selectSearchFiltersList" resultMap="searchFiltersResultForList" parameterClass="searchFilters" cacheModel="oneDayCache">
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
		select * from SEARCH_FILTERS where 1 = 1
		<include refid="sf-searchFilters" />
		<!-- order by ID asc -->
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>

	<select id="selectSearchFiltersCount" resultClass="long" parameterClass="searchFilters" cacheModel="oneDayCache">
		select count(*) from SEARCH_FILTERS where 1 = 1
		<include refid="sf-searchFilters" />
	</select>

	<select id="selectSearchFiltersPaginatedList" resultMap="searchFiltersResult" parameterClass="searchFilters" cacheModel="oneDayCache">
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
		select * from SEARCH_FILTERS where 1 = 1
		<include refid="sf-searchFilters" />
		<!-- order by ID asc -->
		<![CDATA[ ) t_ where rownum <= (#row.first# + #row.count#)) where rn_ >= (#row.first# + 1) ]]>
	</select>

	<insert id="insertSearchFilters" parameterClass="searchFilters">
		<selectKey resultClass="long" keyProperty="id">select BASE_SEQUENCE.nextval as id from dual </selectKey>
		<![CDATA[insert into SEARCH_FILTERS (]]>
		<dynamic prepend=" ">
			<isNotNull prepend="," property="id">ID</isNotNull>	
			<isNotNull prepend="," property="filter_type">FILTER_TYPE</isNotNull>	
			<isNotNull prepend="," property="filter_name">FILTER_NAME</isNotNull>	
			<isNotNull prepend="," property="filter_obj">FILTER_OBJ</isNotNull>	
			<isNotNull prepend="," property="add_date">ADD_DATE</isNotNull>	
			<isNotNull prepend="," property="is_del">IS_DEL</isNotNull>	
			<isNotNull prepend="," property="add_user_id">ADD_USER_ID</isNotNull>	
			<isNotNull prepend="," property="memo">MEMO</isNotNull>	
		</dynamic>
		<![CDATA[) values (]]>
		<dynamic prepend=" ">
			<isNotNull prepend="," property="id">#id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="filter_type">#filter_type:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="filter_name">#filter_name:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="filter_obj">#filter_obj:BLOB#</isNotNull>
			<isNotNull prepend="," property="add_date">#add_date:DATETIME#</isNotNull>
			<isNotNull prepend="," property="is_del">#is_del:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="add_user_id">#add_user_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="memo">#memo:VARCHAR#</isNotNull>
		</dynamic>
		<![CDATA[)]]>
	</insert>

	<update id="updateSearchFilters" parameterClass="SearchFilters">
		update SEARCH_FILTERS
		<dynamic prepend="set">
			<isNotNull prepend="," property="id">ID = #id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="filter_type">FILTER_TYPE = #filter_type:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="filter_name">FILTER_NAME = #filter_name:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="filter_obj">FILTER_OBJ = #filter_obj:BLOB#</isNotNull>
			<isNotNull prepend="," property="add_date">ADD_DATE = #add_date:DATETIME#</isNotNull>
			<isNotNull prepend="," property="is_del">IS_DEL = #is_del:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="add_user_id">ADD_USER_ID = #add_user_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="memo">MEMO = #memo:VARCHAR#</isNotNull>
		</dynamic>
		where
		<isNotEmpty prepend=" " property="id">ID = #id#</isNotEmpty>
		<isEmpty prepend=" " property="id">
			<isNotEmpty prepend=" " property="map.pks">
				ID in
				<iterate close=")" open="(" conjunction="," property="map.pks">#map.pks[]#</iterate>
			</isNotEmpty>
		</isEmpty>
	</update>

	<delete id="deleteSearchFilters" parameterClass="SearchFilters">
		delete from SEARCH_FILTERS where
		<isNotEmpty prepend=" " property="id">ID = #id#</isNotEmpty>
		<isEmpty prepend=" " property="id">
			<isNotEmpty prepend=" " property="map.pks">
				ID in
				<iterate close=")" open="(" conjunction="," property="map.pks">#map.pks[]#</iterate>
			</isNotEmpty>
		</isEmpty>
	</delete>

</sqlMap>