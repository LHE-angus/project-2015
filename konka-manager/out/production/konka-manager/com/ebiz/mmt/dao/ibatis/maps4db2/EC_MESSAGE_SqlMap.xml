<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="EC_MESSAGE">

	<typeAlias alias="ecMessage" type="com.ebiz.mmt.domain.EcMessage" />

	<cacheModel id="oneDayCache" type="OSCACHE">
		<flushInterval hours="24" />
		<flushOnExecute statement="insertEcMessage" />
		<flushOnExecute statement="updateEcMessage" />
		<flushOnExecute statement="deleteEcMessage" />
	</cacheModel>

	<resultMap id="ecMessageResultForList" class="ecMessage">
		<result column="ID" property="id" jdbcType="DECIMAL" />
		<result column="ORDER_ID" property="order_id" jdbcType="VARCHAR" />
		<result column="ADD_DATE" property="add_date" jdbcType="TIMESTAMP" />
		<result column="SEND_DATE" property="send_date" jdbcType="TIMESTAMP" />
		<result column="MOBILE" property="mobile" jdbcType="VARCHAR" />
		<result column="CONTENT" property="content" jdbcType="VARCHAR" />
		<result column="ORDER_STATE" property="order_state" jdbcType="DECIMAL" />
		<result column="SEND_STATE" property="send_state" jdbcType="DECIMAL" />
	</resultMap>

	<resultMap id="ecMessageResult" class="ecMessage" extends="ecMessageResultForList">
	</resultMap>

	<sql id="sf-ecMessage">
		<isNotEmpty prepend=" and " property="id">ID = #id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="order_id">ORDER_ID = #order_id:VARCHAR#</isNotEmpty>
		<isNotEmpty prepend=" and " property="add_date">ADD_DATE = #add_date:TIMESTAMP#</isNotEmpty>
		<isNotEmpty prepend=" and " property="send_date">SEND_DATE = #send_date:TIMESTAMP#</isNotEmpty>
		<isNotEmpty prepend=" and " property="mobile">MOBILE = #mobile:VARCHAR#</isNotEmpty>
		<isNotEmpty prepend=" and " property="content">CONTENT = #content:VARCHAR#</isNotEmpty>
		<isNotEmpty prepend=" and " property="order_state">ORDER_STATE = #order_state:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="send_state">SEND_STATE = #send_state:DECIMAL#</isNotEmpty>
	</sql>

	<select id="selectEcMessage" resultMap="ecMessageResult" parameterClass="ecMessage" cacheModel="oneDayCache">
		select * from EC_MESSAGE where 1 = 1
		<include refid="sf-ecMessage" />
	</select>

	<select id="selectEcMessageList" resultMap="ecMessageResultForList" parameterClass="ecMessage" cacheModel="oneDayCache">
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
		select * from EC_MESSAGE where 1 = 1
		<include refid="sf-ecMessage" />
		<!-- order by ID asc -->
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>

	<select id="selectEcMessageCount" resultClass="long" parameterClass="ecMessage" cacheModel="oneDayCache">
		select count(*) from EC_MESSAGE where 1 = 1
		<include refid="sf-ecMessage" />
	</select>

	<select id="selectEcMessagePaginatedList" resultMap="ecMessageResult" parameterClass="ecMessage" cacheModel="oneDayCache">
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
		select * from EC_MESSAGE where 1 = 1
		<include refid="sf-ecMessage" />
		<!-- order by ID asc -->
		<![CDATA[ ) t_ where rownum <= (#row.first# + #row.count#)) where rn_ >= (#row.first# + 1) ]]>
	</select>

	<insert id="insertEcMessage" parameterClass="ecMessage">
