<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="EC_CUST">

	<typeAlias alias="ecCust" type="com.ebiz.mmt.domain.EcCust" />

	<cacheModel id="oneDayCache" type="OSCACHE">
		<flushInterval hours="24" />
		<flushOnExecute statement="insertEcCust" />
		<flushOnExecute statement="updateEcCust" />
		<flushOnExecute statement="deleteEcCust" />
	</cacheModel>

	<resultMap id="ecCustResultForList" class="ecCust">
