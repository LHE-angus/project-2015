<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="PE_POSITION">

	<typeAlias alias="pePosition" type="com.ebiz.mmt.domain.PePosition" />

	

	<resultMap id="pePositionResultForList" class="pePosition">
		<result column="POSITION_ID" property="position_id" jdbcType="DECIMAL" />
		<result column="POSITION_NAME" property="position_name" jdbcType="VARCHAR" />
		<result column="POSITION_DESC" property="position_desc" jdbcType="VARCHAR" />
		<result column="ENTP_ID" property="entp_id" jdbcType="DECIMAL" />
		<result column="ADD_DATE" property="add_date" jdbcType="DATETIME" />
		<result column="ADD_E_USER_ID" property="add_e_user_id" jdbcType="DECIMAL" />
		<result column="IS_DEL" property="is_del" jdbcType="DECIMAL" />
		<result column="IS_LEADER" property="is_leader" jdbcType="DECIMAL" />
	</resultMap>

	<resultMap id="pePositionResult" class="pePosition" extends="pePositionResultForList">
	</resultMap>
	
	<resultMap id="pePositionWithNameResult" class="pePosition" extends="pePositionResultForList">
		<result column="USER_NAME" property="map.add_user_name" jdbcType="VARCHAR" />
	</resultMap>
	
	<sql id="sf-pePosition">
		<isNotEmpty prepend=" and " property="position_id">POSITION_ID = #position_id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="position_name">POSITION_NAME = #position_name:VARCHAR#</isNotEmpty>
		<isNotEmpty prepend=" and " property="position_desc">POSITION_DESC = #position_desc:VARCHAR#</isNotEmpty>
		<isNotEmpty prepend=" and " property="entp_id">ENTP_ID = #entp_id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="add_date">ADD_DATE = #add_date:DATETIME#</isNotEmpty>
		<isNotEmpty prepend=" and " property="add_e_user_id">ADD_E_USER_ID = #add_e_user_id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="is_del">IS_DEL = #is_del:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="is_leader">IS_LEADER = #is_leader:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="map.position_id_not_eq">position_id != #map.position_id_not_eq:DECIMAL#</isNotEmpty>
	</sql>

	<select id="selectPePosition" resultMap="pePositionResult" parameterClass="pePosition" >
		select * from KONKA_PE_POSITION where 1 = 1
		<include refid="sf-pePosition" />
	</select>
	
	<select id="selectPePositionList" resultMap="pePositionResultForList" parameterClass="pePosition" >
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
		select * from KONKA_PE_POSITION where 1 = 1
		<include refid="sf-pePosition" />
		<!-- order by ID asc -->
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>

	<select id="selectPePositionCount" resultClass="long" parameterClass="pePosition" >
		select count(*) from KONKA_PE_POSITION where 1 = 1
		<include refid="sf-pePosition" />
	</select>

	<select id="selectPePositionPaginatedList" resultMap="pePositionResult" parameterClass="pePosition" >
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
		select * from KONKA_PE_POSITION where 1 = 1
		<include refid="sf-pePosition" />
		<!-- order by ID asc -->
		<![CDATA[ ) t_ where rownum <= (#row.first# + #row.count#)) where rn_ >= (#row.first# + 1) ]]>
	</select>
	
	<select id="selectPePositionWithNameCount" resultClass="long" parameterClass="pePosition" >
		select count(*) from KONKA_PE_POSITION a left join KONKA_PE_PROD_USER b on a.add_e_user_id = b.id
		 where 1 = 1
		 <isNotEmpty prepend=" and " property="add_e_user_id">a.ADD_E_USER_ID = #add_e_user_id:DECIMAL#</isNotEmpty>
		 <isNotEmpty prepend=" and " property="is_del">a.IS_DEL = #is_del:DECIMAL#</isNotEmpty>
		 <isNotEmpty prepend=" and " property="is_leader">a.IS_LEADER = #is_leader:DECIMAL#</isNotEmpty>
		 <isNotEmpty property="map.position_name_like" prepend=" AND ">UPPER(a.position_name) like '%' || UPPER(#map.position_name_like:VARCHAR#) || '%'</isNotEmpty>
		 <isNotEmpty property="map.par_user_id" prepend=" AND ">a.add_e_user_id in (select id from KONKA_PE_PROD_USER where is_del = 0 and (add_e_user_id = #map.par_user_id:DECIMAL# or id = #map.par_user_id:DECIMAL#))</isNotEmpty>
	</select>

	<select id="selectPePositionWithNamePaginatedList" resultMap="pePositionWithNameResult" parameterClass="pePosition" >
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
		select a.*, b.user_name from KONKA_PE_POSITION a left join KONKA_PE_PROD_USER b on a.add_e_user_id = b.id
		 where 1 = 1
		 <isNotEmpty prepend=" and " property="add_e_user_id">a.ADD_E_USER_ID = #add_e_user_id:DECIMAL#</isNotEmpty>
		 <isNotEmpty prepend=" and " property="is_del">a.IS_DEL = #is_del:DECIMAL#</isNotEmpty>
		 <isNotEmpty prepend=" and " property="is_leader">a.IS_LEADER = #is_leader:DECIMAL#</isNotEmpty>
		 <isNotEmpty property="map.position_name_like" prepend=" AND ">UPPER(a.position_name) like '%' || UPPER(#map.position_name_like:VARCHAR#) || '%'</isNotEmpty>
		 <isNotEmpty property="map.par_user_id" prepend=" AND ">a.add_e_user_id in (select id from KONKA_PE_PROD_USER where is_del = 0 and (add_e_user_id = #map.par_user_id:DECIMAL# or id = #map.par_user_id:DECIMAL#))</isNotEmpty>
		 order by a.add_date desc, a.position_id desc
		<![CDATA[ ) t_ where rownum <= (#row.first# + #row.count#)) where rn_ >= (#row.first# + 1) ]]>
	</select>

	<insert id="insertPePosition" parameterClass="pePosition">
		<selectKey resultClass="long" keyProperty="position_id">select KONKA_PROD_SEQUENCE.nextval as id from dual </selectKey>
		<![CDATA[insert into KONKA_PE_POSITION (]]>
		<dynamic prepend=" ">
			<isNotNull prepend="," property="position_id">POSITION_ID</isNotNull>	
			<isNotNull prepend="," property="position_name">POSITION_NAME</isNotNull>	
			<isNotNull prepend="," property="position_desc">POSITION_DESC</isNotNull>	
			<isNotNull prepend="," property="entp_id">ENTP_ID</isNotNull>	
			<isNotNull prepend="," property="add_date">ADD_DATE</isNotNull>	
			<isNotNull prepend="," property="add_e_user_id">ADD_E_USER_ID</isNotNull>	
			<isNotNull prepend="," property="is_del">IS_DEL</isNotNull>
			<isNotNull prepend="," property="is_leader">IS_LEADER</isNotNull>		
		</dynamic>
		<![CDATA[) values (]]>
		<dynamic prepend=" ">
			<isNotNull prepend="," property="position_id">#position_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="position_name">#position_name:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="position_desc">#position_desc:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="entp_id">#entp_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="add_date">#add_date:DATETIME#</isNotNull>
			<isNotNull prepend="," property="add_e_user_id">#add_e_user_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="is_del">#is_del:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="is_leader">#is_leader:DECIMAL#</isNotNull>
		</dynamic>
		<![CDATA[)]]>
	</insert>

	<update id="updatePePosition" parameterClass="PePosition">
		update KONKA_PE_POSITION
		<dynamic prepend="set">
			<isNotNull prepend="," property="position_id">POSITION_ID = #position_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="position_name">POSITION_NAME = #position_name:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="position_desc">POSITION_DESC = #position_desc:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="entp_id">ENTP_ID = #entp_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="add_date">ADD_DATE = #add_date:DATETIME#</isNotNull>
			<isNotNull prepend="," property="add_e_user_id">ADD_E_USER_ID = #add_e_user_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="is_del">IS_DEL = #is_del:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="is_leader">IS_LEADER = #is_leader:DECIMAL#</isNotNull>
		</dynamic>
		where
		<isNotEmpty prepend=" " property="position_id">POSITION_ID = #position_id#</isNotEmpty>
		<isEmpty prepend=" " property="position_id">
			<isNotEmpty prepend=" " property="map.pks">
				POSITION_ID in
				<iterate close=")" open="(" conjunction="," property="map.pks">#map.pks[]#</iterate>
			</isNotEmpty>
		</isEmpty>
	</update>

	<delete id="deletePePosition" parameterClass="PePosition">
		delete from KONKA_PE_POSITION where
		<isNotEmpty prepend=" " property="position_id">POSITION_ID = #position_id#</isNotEmpty>
		<isEmpty prepend=" " property="position_id">
			<isNotEmpty prepend=" " property="map.pks">
				POSITION_ID in
				<iterate close=")" open="(" conjunction="," property="map.pks">#map.pks[]#</iterate>
			</isNotEmpty>
		</isEmpty>
	</delete>

</sqlMap>