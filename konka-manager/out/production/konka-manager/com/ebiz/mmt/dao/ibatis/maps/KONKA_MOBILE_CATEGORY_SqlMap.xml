	<select id="selectKonkaMobileCategoryListForSelect" resultMap="categoryResultForSelect" parameterClass="konkaMobileCategory" >
	<isNotEmpty property="row.count">
		<![CDATA[ select * from ( ]]>
		</isNotEmpty>
		select distinct a.c_index, a.c_name from KONKA_MOBILE_CATEGORY a where 1 = 1
		<isNotEmpty property="map.things">
		   and a.c_index in(4,11)
		</isNotEmpty>
		<include refid="sf-konkaMobileCategory" />
		order by a.c_index
		<isNotEmpty property="row.count">
		<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>
	
	<select id="selectKonkaMobileCategoryListForFiles" resultMap="categoryResultForList" parameterClass="konkaMobileCategory" >
		select * from KONKA_MOBILE_CATEGORY where 1 = 1
		<isNotEmpty prepend=" and " property="map.c_types">
