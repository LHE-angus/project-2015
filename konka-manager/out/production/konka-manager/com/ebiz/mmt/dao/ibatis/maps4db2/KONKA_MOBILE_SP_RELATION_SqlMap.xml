<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="KONKA_MOBILE_SP_RELATION">

	<typeAlias alias="konkaMobileSpRelation" type="com.ebiz.mmt.domain.KonkaMobileSpRelation" />

	<cacheModel id="oneDayCache" type="OSCACHE">
		<flushInterval hours="24" />
		<flushOnExecute statement="insertKonkaMobileSpRelation" />
		<flushOnExecute statement="updateKonkaMobileSpRelation" />
		<flushOnExecute statement="deleteKonkaMobileSpRelation" />
	</cacheModel>

	<resultMap id="konkaMobileSpRelationResultForList" class="konkaMobileSpRelation">
		<result column="SELLER_ID" property="seller_id" jdbcType="DECIMAL" />
		<result column="SHOP_ID" property="shop_id" jdbcType="DECIMAL" />
	</resultMap>
	
	<resultMap id="konkaMobileSpRelationInShopNameResultForList" class="konkaMobileSpRelation">
		<result column="SELLER_ID" property="seller_id" jdbcType="DECIMAL" />
		<result column="SHOP_ID" property="shop_id" jdbcType="DECIMAL" />
		<result column="STORE_NAME" property="map.store_name" jdbcType="VARCHAR" />
	</resultMap>

	<resultMap id="konkaMobileSpRelationResult" class="konkaMobileSpRelation" extends="konkaMobileSpRelationResultForList">
	</resultMap>

	<sql id="sf-konkaMobileSpRelation">
		<isNotEmpty prepend=" and " property="seller_id">SELLER_ID = #seller_id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="shop_id">SHOP_ID = #shop_id:DECIMAL#</isNotEmpty>
	</sql>

	<select id="selectKonkaMobileSpRelation" resultMap="konkaMobileSpRelationResult" parameterClass="konkaMobileSpRelation" cacheModel="oneDayCache">
		select * from KONKA_MOBILE_SP_RELATION where 1 = 1
		<include refid="sf-konkaMobileSpRelation" />
	</select>

	<select id="selectKonkaMobileSpRelationList" resultMap="konkaMobileSpRelationResultForList" parameterClass="konkaMobileSpRelation" cacheModel="oneDayCache">
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
		select * from KONKA_MOBILE_SP_RELATION where 1 = 1
		<include refid="sf-konkaMobileSpRelation" />
		<!-- order by ID asc -->
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>
	
	<!-- Hu,Hao 2013-06-27 门店反查促销员-->
	<select id="selectKonkaMobileSpRelationForCxyIdList" resultMap="konkaMobileSpRelationResult" parameterClass="konkaMobileSpRelation" cacheModel="oneDayCache">
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
		  select t.*
    			from KONKA_MOBILE_SP_RELATION t ,  KONKA_R3_STORE kes
    			where kes.store_id = t.shop_id
		<isNotEmpty prepend=" and " property="map.store_name_like">kes.store_name like '%'|| upper(#map.store_name_like:VARCHAR#) ||'%'</isNotEmpty>
		<!-- order by ID asc -->
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>
	
	
	<select id="selectKonkaMobileSpRelationForCxyList" resultMap="konkaMobileSpRelationResult" parameterClass="konkaMobileSpRelation" cacheModel="oneDayCache">
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
		  SELECT t.*
			  FROM KONKA_MOBILE_SP_RELATION t
			       LEFT JOIN KONKA_PE_PROD_USER a
			          ON t.SELLER_ID = a.ID
			       LEFT JOIN konka_r3_store b
			          ON t.SHOP_ID = b.STORE_ID
			 WHERE 1 = 1  
		<isNotEmpty prepend=" and " property="map.shop_id_eq">t.shop_id = #map.shop_id_eq#</isNotEmpty>
		<isNotEmpty prepend=" and " property="map.is_del_eq">a.IS_DEL = 0</isNotEmpty>
		<!-- order by ID asc -->
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>
	
	
	<!-- @version 2013-04-18,@author Jiang,JiaYong , @desc 查询列表信息包含企业名称  -->
	<select id="selectKonkaMobileSpRelationInShopNameList" resultMap="konkaMobileSpRelationInShopNameResultForList" parameterClass="konkaMobileSpRelation" cacheModel="oneDayCache">
		select t.*, kes.store_name from (
			<isNotEmpty property="row.count">
				<![CDATA[ select * from ( ]]>
			</isNotEmpty>
			select * from KONKA_MOBILE_SP_RELATION where 1 = 1
			<include refid="sf-konkaMobileSpRelation" />
			<!-- order by ID asc -->
			<isNotEmpty property="row.count">
				<![CDATA[ ) where rownum <= #row.count# ]]>
			</isNotEmpty>
		) t left join KONKA_R3_STORE kes on kes.store_id = t.shop_id where kes.is_del = 0
	</select>

	<select id="selectKonkaMobileSpRelationCount" resultClass="long" parameterClass="konkaMobileSpRelation" cacheModel="oneDayCache">
		select count(*) from KONKA_MOBILE_SP_RELATION where 1 = 1
		<include refid="sf-konkaMobileSpRelation" />
	</select>

	<select id="selectKonkaMobileSpRelationPaginatedList" resultMap="konkaMobileSpRelationResult" parameterClass="konkaMobileSpRelation" cacheModel="oneDayCache">
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
		select * from KONKA_MOBILE_SP_RELATION where 1 = 1
		<include refid="sf-konkaMobileSpRelation" />
		<!-- order by ID asc -->
		<![CDATA[ ) t_ where rownum <= (#row.first# + #row.count#)) where rn_ >= (#row.first# + 1) ]]>
	</select>

	<insert id="insertKonkaMobileSpRelation" parameterClass="konkaMobileSpRelation">
		<![CDATA[insert into KONKA_MOBILE_SP_RELATION (]]>
		<dynamic prepend=" ">
			<isNotNull prepend="," property="seller_id">SELLER_ID</isNotNull>	
			<isNotNull prepend="," property="shop_id">SHOP_ID</isNotNull>	
		</dynamic>
		<![CDATA[) values (]]>
		<dynamic prepend=" ">
			<isNotNull prepend="," property="seller_id">#seller_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="shop_id">#shop_id:DECIMAL#</isNotNull>
		</dynamic>
		<![CDATA[)]]>
	</insert>

	<update id="updateKonkaMobileSpRelation" parameterClass="KonkaMobileSpRelation">
		update KONKA_MOBILE_SP_RELATION
		<dynamic prepend="set">
			<isNotNull prepend="," property="seller_id">SELLER_ID = #seller_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="shop_id">SHOP_ID = #shop_id:DECIMAL#</isNotNull>
		</dynamic>
		where
		<isNotEmpty prepend=" " property="id">ID = #id#</isNotEmpty>
		<isEmpty prepend=" " property="id">
			<isNotEmpty prepend=" " property="map.pks">
				ID in
				<iterate close=")" open="(" conjunction="," property="map.pks">#map.pks[]#</iterate>
			</isNotEmpty>
		</isEmpty>
	</update>

	<delete id="deleteKonkaMobileSpRelation" parameterClass="KonkaMobileSpRelation">
		delete from KONKA_MOBILE_SP_RELATION where SELLER_ID = #seller_id:DECIMAL# 
		<isNotEmpty prepend=" and " property="shop_id">SHOP_ID = #shop_id:DECIMAL#</isNotEmpty>
	</delete>

</sqlMap>