<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
	<!-- ======================================== Form Bean Definitions -->
	<form-beans>
		<form-bean name="lazyForm" type="org.apache.struts.validator.LazyValidatorForm" />

		<form-bean name="fullLazyForm" type="org.apache.struts.validator.LazyValidatorForm">
			<form-property name="imageField" type="org.apache.struts.util.ImageButtonBean" />
			<form-property name="pager" type="com.ebiz.ssi.web.struts.bean.Pager" />
			<form-property name="pks" type="java.lang.String[]" />
		</form-bean>
	</form-beans>

	<global-forwards>
		<forward name="index" path="index.do" redirect="true" />
	</global-forwards>

	<action-mappings>

		<action path="/index" attribute="af" name="lazyForm" type="com.ebiz.mmt.web.struts.jxc.IndexAction" parameter="method" scope="request" validate="false">
			<forward name="success" path="/index.jsp" />
		</action>
		
		<action path="/*" attribute="af" name="fullLazyForm" type="com.ebiz.mmt.web.struts.jxc.{1}Action"
			parameter="method" scope="request" validate="false">
			<forward name="list" path="/{1}/list.jsp" />
			<forward name="view" path="/{1}/view.jsp" />
			<forward name="input" path="/{1}/form.jsp" />
			<forward name="audit" path="/{1}/audit.jsp" />
			<forward name="success" path="/{1}.do?method=list" redirect="true" />
			
			<forward name="indexFrame" path="/{1}/indexFrame.jsp" />
			<forward name="topFrame" path="/{1}/topFrame.jsp" />
			<forward name="leftFrame" path="/{1}/leftFrame.jsp" />
			<forward name="lrFrame" path="/{1}/lrFrame.jsp" />
			<forward name="mainFrame" path="/{1}/mainFrame.jsp" />
			<forward name="bottomFrame" path="/{1}/bottomFrame.jsp" />
		</action>

	</action-mappings>

	<!-- =================================== Message Resources Definitions -->
	<message-resources parameter="i18n/messages" />
</struts-config>