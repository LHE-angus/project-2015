<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
	<!-- ======================================== Form Bean Definitions -->
	<form-beans>
		<form-bean name="lazyForm" type="org.apache.struts.validator.LazyValidatorForm" />

		<form-bean name="fullLazyForm" type="org.apache.struts.validator.LazyValidatorForm">
			<form-property name="imageField" type="org.apache.struts.util.ImageButtonBean" />
			<form-property name="pager" type="com.ebiz.ssi.web.struts.bean.Pager" />
			<form-property name="pks" type="java.lang.String[]" /> 
		</form-bean>
	</form-beans>

	<global-forwards>
		<forward name="error" path="Validation.do" redirect="true" />
		<forward name="errorMsg" path="/error.jsp" />
	</global-forwards>

	<action-mappings>
		<action path="/Validation" attribute="loginForm" name="lazyForm" type="com.ebiz.mmt.web.struts.inter.action.ValidationAction"
			parameter="method" scope="request" validate="false">
			<forward name="success" path="/Index.do" redirect="true" />
			<forward name="login" path="/login.jsp" />
		</action>
		<action path="/KonkaInterfaceBingdsUser" attribute="loginForm" name="lazyForm" type="com.ebiz.mmt.web.struts.inter.action.KonkaInterfaceBingdsUserAction"
			parameter="method" scope="request" validate="false">
			<forward name="success" path="/Index.do" redirect="true" />
			<forward name="login" path="/login.jsp" />
		</action>
		<action path="/service/*" attribute="af" name="fullLazyForm" type="com.ebiz.mmt.web.struts.inter.action.{1}Action"
			parameter="method" scope="request" validate="false">
			<forward name="index" path="/center/index.jsp" /> 
			<forward name="list" path="/service/{1}/list.jsp" />
			<forward name="view" path="/service/{1}/view.jsp" />
		</action>
 
	</action-mappings>

	<!-- =================================== Message Resources Definitions -->
	<message-resources parameter="i18n/messages" />
</struts-config>