<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
	<!-- ======================================== Form Bean Definitions -->
	<form-beans>
		<form-bean name="lazyForm" type="org.apache.struts.validator.LazyValidatorForm" />

		<form-bean name="fullLazyForm" type="org.apache.struts.validator.LazyValidatorForm">
			<form-property name="imageField" type="org.apache.struts.util.ImageButtonBean" />
			<form-property name="pager" type="com.ebiz.ssi.web.struts.bean.Pager" />
			<form-property name="pager2" type="com.ebiz.ssi.web.struts.bean.Pager" />
			<form-property name="pks" type="java.lang.String[]" />
			<form-property name="complaints_reason1" type="java.lang.String[]" />
			<form-property name="complaints_reason2" type="java.lang.String[]" />
			<form-property name="send_type4" type="java.lang.String[]" />
			<form-property name="return_typr4" type="java.lang.String[]" />
			<form-property name="popedom" type="java.lang.String[]" />
			<form-property name="group_by_field" type="java.lang.String[]" />
			<form-property name="show_field" type="java.lang.String[]" />
			<form-property name="contrast" type="java.lang.String[]" />
			<!-- 客户联系人信息 -->
			<form-property name="r3_link_position" type="java.lang.String[]" />
			<form-property name="r3_link_real_name" type="java.lang.String[]" />
			<form-property name="r3_link_sex" type="java.lang.String[]" />
			<form-property name="r3_link_birthday" type="java.lang.String[]" />
			<form-property name="r3_link_tel" type="java.lang.String[]" />
			<form-property name="r3_link_email" type="java.lang.String[]" />
			<form-property name="r3_link_favor" type="java.lang.String[]" />
			<!-- 客户信息查询 -->
			<form-property name="filter_params" type="java.lang.String[]" />
			<form-property name="filter_operators" type="java.lang.String[]" />
			<form-property name="filter_values" type="java.lang.String[]" />
			<form-property name="filter_types" type="java.lang.String[]" />
			<form-property name="filter_group_flag" type="java.lang.String[]" />
			<form-property name="group_params" type="java.lang.String[]" />
			<form-property name="group_out_params" type="java.lang.String[]" />
			<form-property name="group_out_operators" type="java.lang.String[]" />
			<form-property name="out_params" type="java.lang.String[]" />
			<form-property name="order_params" type="java.lang.String[]" />
			<form-property name="order_values" type="java.lang.String[]" />
			<form-property name="out_all_flag" type="java.lang.String[]" />
		</form-bean>
	</form-beans>

	<global-forwards>
		<forward name="index" path="index.do" redirect="true" />
	</global-forwards>

	<action-mappings>

		<action path="/*/*" attribute="af" name="fullLazyForm" type="com.ebiz.mmt.web.struts.manager.{1}.{2}Action"
			parameter="method" scope="request" validate="false">
			<forward name="list" path="/{1}/{2}/list.jsp" />
			<forward name="view" path="/{1}/{2}/view.jsp" />
			<forward name="input" path="/{1}/{2}/form.jsp" />
			<forward name="audit" path="/{1}/{2}/audit.jsp" />
			<forward name="search" path="/{1}/{2}/search.jsp" />
			<forward name="excel" path="/{1}/{2}/excel.jsp" />
			<forward name="success" path="/{1}/{2}.do?method=list" redirect="true" />
			<forward name="successDelivery" path="/{1}/{2}.do?method=delivery" redirect="true" />
			
			<!-- 业务审核，市场审批，财务审批 -->
			<forward name="serAudit" path="/{1}/{2}/serAudit.jsp" />
			<forward name="marAudit" path="/{1}/{2}/marAudit.jsp" />
			<forward name="finAudit" path="/{1}/{2}/finAudit.jsp" />
			
			<forward name="indexFrame" path="/{1}/{2}/indexFrame.jsp" />
			<forward name="topFrame" path="/{1}/{2}/topFrame.jsp" />
			<forward name="leftFrame" path="/{1}/{2}/leftFrame.jsp" />
			<forward name="middleFrame" path="/{1}/{2}/middleFrame.jsp" />
			<forward name="mainFrame" path="/{1}/{2}/mainFrame.jsp" />
			<forward name="footerFrame" path="/{1}/{2}/footerFrame.jsp" />
			<forward name="waitFrame" path="/{1}/{2}/waitFrame.jsp" />
			
			
			
			<forward name="successleader" path="/leader/Frames3.do?method=index" redirect="true" />
			<forward name="leaderindexFrame" path="/leader/indexFrame.jsp"/>
			
		</action>
	</action-mappings>

	<!-- =================================== Message Resources Definitions -->
	<message-resources parameter="i18n/messages" />
</struts-config>