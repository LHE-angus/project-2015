<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="ARTICLE_IMG">

	<typeAlias alias="articleImg" type="com.ebiz.mmt.domain.ArticleImg" />

	<cacheModel id="oneDayCache" type="OSCACHE">
		<flushInterval hours="24" />
		<flushOnExecute statement="insertArticleImg" />
		<flushOnExecute statement="updateArticleImg" />
		<flushOnExecute statement="deleteArticleImg" />
	</cacheModel>

	<resultMap id="articleImgResultForList" class="articleImg">
		<result column="ID" property="id" jdbcType="DECIMAL" />
		<result column="TUNNEL" property="tunnel" jdbcType="VARCHAR" />
		<result column="TITLE" property="title" jdbcType="VARCHAR" />
		<result column="IMAGE_PATH" property="image_path" jdbcType="VARCHAR" />
		<result column="IMAGE_DESC" property="image_desc" jdbcType="VARCHAR" />
		<result column="IMAGE_URL" property="image_url" jdbcType="VARCHAR" />
		<result column="PUB_USER_ID" property="pub_user_id" jdbcType="DECIMAL" />
		<result column="PUB_USER_NAME" property="pub_user_name" jdbcType="VARCHAR" />
		<result column="PUB_DATE" property="pub_date" jdbcType="DATETIME" />
		<result column="INVALID_DATE" property="invalid_date" jdbcType="DATETIME" />
		<result column="MODIFY_DATE" property="modify_date" jdbcType="DATETIME" />
		<result column="VIEW_COUNT" property="view_count" jdbcType="DECIMAL" />
		<result column="ORDER_VALUE" property="order_value" jdbcType="DECIMAL" />
		<result column="INFO_STATE" property="info_state" jdbcType="DECIMAL" />
		<result column="NEWS_MODULE" property="news_module" jdbcType="DECIMAL" />
	</resultMap>

	<resultMap id="articleImgResult" class="articleImg" extends="articleImgResultForList">
	</resultMap>

	<sql id="sf-articleImg">
		<isNotEmpty prepend=" and " property="id">ID = #id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="tunnel">TUNNEL = #tunnel:VARCHAR#</isNotEmpty>
		<isNotEmpty prepend=" and " property="news_module">NEWS_MODULE = #news_module:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="title">TITLE like '%' || #title:VARCHAR# || '%'</isNotEmpty>
		<isNotEmpty prepend=" and " property="info_state">INFO_STATE = #info_state:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="pub_user_name">PUB_USER_NAME = #pub_user_name:VARCHAR#</isNotEmpty>
		<isNotEmpty prepend=" and " property="map.st_pub_date"><![CDATA[to_char(pub_date, 'yyyy-mm-dd') >= #map.st_pub_date:VARCHAR#]]></isNotEmpty>
		<isNotEmpty prepend=" and " property="map.en_pub_date"><![CDATA[to_char(pub_date, 'yyyy-mm-dd') <= #map.en_pub_date:VARCHAR#]]></isNotEmpty>
		<isNotEmpty prepend=" and " property="map.today">
			<![CDATA[ to_char(pub_date, 'yyyy-mm-dd') <= #map.today# and to_char(invalid_date, 'yyyy-mm-dd') >= #map.today#]]>
		</isNotEmpty>
		<isNotEmpty prepend=" and " property="map.par_news_module">
			<![CDATA[ NEWS_MODULE in (
				select W_MOD_ID from SYS_MODULE_WEB start with w_mod_id = #map.par_news_module:DECIMAL# connect by prior w_mod_id = par_id
			) ]]>
		</isNotEmpty>
	</sql>

	<select id="selectArticleImg" resultMap="articleImgResult" parameterClass="articleImg" cacheModel="oneDayCache">
		select * from ARTICLE_IMG where 1 = 1
		<include refid="sf-articleImg" />
	</select>

	<select id="selectArticleImgList" resultMap="articleImgResultForList" parameterClass="articleImg" cacheModel="oneDayCache">
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
		select * from ARTICLE_IMG where 1 = 1
		<include refid="sf-articleImg" />
		order by info_state desc, order_value desc, pub_date desc nulls last, id desc
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>

	<select id="selectArticleImgCount" resultClass="long" parameterClass="articleImg" cacheModel="oneDayCache">
		select count(*) from ARTICLE_IMG where 1 = 1
		<include refid="sf-articleImg" />
	</select>

	<select id="selectArticleImgPaginatedList" resultMap="articleImgResult" parameterClass="articleImg" cacheModel="oneDayCache">
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
		select * from ARTICLE_IMG where 1 = 1
		<include refid="sf-articleImg" />
		order by info_state desc, order_value desc, pub_date desc nulls last, id desc
		<![CDATA[ ) t_ where rownum <= (#row.first# + #row.count#)) where rn_ >= (#row.first# + 1) ]]>
	</select>

	<insert id="insertArticleImg" parameterClass="articleImg">
		<selectKey resultClass="java.lang.Long" keyProperty="id">select base_sequence.nextval as id from dual</selectKey>
		<![CDATA[
		insert into ARTICLE_IMG
		  (ID,
		   TUNNEL,
		   TITLE,
		   IMAGE_PATH,
		   IMAGE_DESC,
		   IMAGE_URL,
		   PUB_USER_ID,
		   PUB_USER_NAME,
		   PUB_DATE,
		   INVALID_DATE,
		   MODIFY_DATE,
		   VIEW_COUNT,
		   ORDER_VALUE,
		   INFO_STATE,
		   NEWS_MODULE)
		values
		  (#id:DECIMAL#,
		   #tunnel:VARCHAR#,
		   #title:VARCHAR#,
		   #image_path:VARCHAR#,
		   #image_desc:VARCHAR#,
		   #image_url:VARCHAR#,
		   #pub_user_id:DECIMAL#,
		   #pub_user_name:VARCHAR#,
		   #pub_date:DATETIME#,
		   #invalid_date:DATETIME#,
		   #modify_date:DATETIME#,
		   #view_count:DECIMAL#,
		   #order_value:DECIMAL#,
		   #info_state:DECIMAL#,
		   #news_module:DECIMAL#)
		]]>
	</insert>

	<update id="updateArticleImg" parameterClass="articleImg">
		update ARTICLE_IMG
		<dynamic prepend="set">
			<isNotNull prepend="," property="tunnel">TUNNEL = #tunnel:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="title">TITLE = #title:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="image_path">IMAGE_PATH = #image_path:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="image_desc">IMAGE_DESC = #image_desc:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="image_url">IMAGE_URL = #image_url:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="pub_user_id">PUB_USER_ID = #pub_user_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="pub_user_name">PUB_USER_NAME = #pub_user_name:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="pub_date">PUB_DATE = #pub_date:DATETIME#</isNotNull>
			<isNotNull prepend="," property="invalid_date">INVALID_DATE = #invalid_date:DATETIME#</isNotNull>
			<isNotNull prepend="," property="modify_date">MODIFY_DATE = #modify_date:DATETIME#</isNotNull>
			<isNotNull prepend="," property="view_count">VIEW_COUNT = #view_count:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="order_value">ORDER_VALUE = #order_value:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="info_state">INFO_STATE = #info_state:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="news_module">NEWS_MODULE = #news_module:DECIMAL#</isNotNull>
		</dynamic>
		where
		<isNotEmpty prepend=" " property="id">ID = #id#</isNotEmpty>
		<isEmpty prepend=" " property="id">
			<isNotEmpty prepend=" " property="map.pks">
				ID in
				<iterate close=")" open="(" conjunction="," property="map.pks">#map.pks[]#</iterate>
			</isNotEmpty>
		</isEmpty>
	</update>

	<delete id="deleteArticleImg" parameterClass="articleImg">
		delete from ARTICLE_IMG where
		<isNotEmpty prepend=" " property="id">ID = #id#</isNotEmpty>
		<isEmpty prepend=" " property="id">
			<isNotEmpty prepend=" " property="map.pks">
				ID in
				<iterate close=")" open="(" conjunction="," property="map.pks">#map.pks[]#</iterate>
			</isNotEmpty>
		</isEmpty>
	</delete>

</sqlMap>