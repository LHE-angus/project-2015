	<select id="selectEcVoteRecordPaginatedList" resultMap="ecVoteRecordResult" parameterClass="ecVoteRecord" cacheModel="oneDayCache">
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
