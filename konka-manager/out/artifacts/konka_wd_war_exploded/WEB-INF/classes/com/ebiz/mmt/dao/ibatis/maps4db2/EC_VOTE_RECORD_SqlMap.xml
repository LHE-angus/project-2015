	<select id="selectEcVoteRecordByVoteOptionId" resultMap="ecVoteRecordResult" parameterClass="java.lang.Long" cacheModel="oneDayCache">
		select t.*,(days(sysdate)-days(add_date)) as days from EC_VOTE_RECORD t where t.vote_option_id = #value# order by id 
	</select>

	<select id="selectEcVoteRecord" resultMap="ecVoteRecordResult" parameterClass="ecVoteRecord" cacheModel="oneDayCache">
		select t.*,(days(sysdate)-days(add_date)) as days from EC_VOTE_RECORD t where 1 = 1
		<include refid="sf-ecVoteRecord" />
	</select>

