	<cacheModel id="oneDayCache" type="OSCACHE">
		<flushInterval hours="24" />
		<flushOnExecute statement="insertJBaseType" />
		<flushOnExecute statement="updateJBaseType" />
		<flushOnExecute statement="deleteJBaseType" />
	</cacheModel>

	<resultMap id="jBaseTypeResultForList" class="jBaseType">
