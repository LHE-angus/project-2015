	<update id="updateCrmCustomerGroup" parameterClass="CrmCustomerGroup">
		update CRM_CUSTOMER_GROUP
		<dynamic prepend="set">
			<isNotNull prepend="," property="id">ID = #id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="groupcode">GROUPCODE = #groupcode:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="groupname">GROUPNAME = #groupname:CHAR#</isNotNull>
			<isNotNull prepend="," property="deptid">DEPTID = #deptid:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="begindate">BEGINDATE = #begindate:TIMESTAMP#</isNotNull>
			<isNotNull prepend="," property="enddate">ENDDATE = #enddate:TIMESTAMP#</isNotNull>
			<isNotNull prepend="," property="created_date">CREATED_DATE = #created_date:TIMESTAMP#</isNotNull>
