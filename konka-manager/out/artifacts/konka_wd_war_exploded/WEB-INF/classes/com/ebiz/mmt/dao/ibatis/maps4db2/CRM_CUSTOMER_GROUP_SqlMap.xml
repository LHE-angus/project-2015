	<sql id="sf-crmCustomerGroup">
		<isNotEmpty prepend=" and " property="id">ID = #id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="groupcode">GROUPCODE like '%' ||  #groupcode:VARCHAR# || '%'</isNotEmpty>
		<isNotEmpty prepend=" and " property="groupname">GROUPNAME like '%' ||  #groupname:CHAR# || '%'</isNotEmpty>
		<isNotEmpty prepend=" and " property="map.groupcode_eq">GROUPCODE = #map.groupcode_eq:VARCHAR#</isNotEmpty>
		<isNotEmpty prepend=" and " property="map.groupname_eq">GROUPNAME = #map.groupname_eq:VARCHAR#</isNotEmpty>
		<isNotEmpty prepend=" and " property="deptid">DEPTID = #deptid:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="begindate">BEGINDATE = #begindate:TIMESTAMP#</isNotEmpty>
		<isNotEmpty prepend=" and " property="enddate">ENDDATE = #enddate:TIMESTAMP#</isNotEmpty>
		<isNotEmpty prepend=" and " property="created_date">CREATED_DATE = #created_date:TIMESTAMP#</isNotEmpty>
		<isNotEmpty prepend=" and " property="last_updated_by">LAST_UPDATED_BY = #last_updated_by:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="created_by">CREATED_BY = #created_by:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="last_updated_date">LAST_UPDATED_DATE = #last_updated_date:TIMESTAMP#</isNotEmpty>
		<isNotEmpty prepend=" and " property="remark">REMARK = #remark:VARCHAR#</isNotEmpty>
		<isNotEmpty prepend=" and " property="isdel">ISDEL = #isdel:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="group_type">GROUP_TYPE = #group_type:DECIMAL#</isNotEmpty>
		
		<isEmpty prepend=" and " property="map.group_type">GROUP_TYPE = 0</isEmpty>
		<isNotEmpty prepend=" and " property="map.group_type">GROUP_TYPE = #map.group_type#</isNotEmpty>
		
		<isNotEmpty prepend=" and " property="map.line_customername">id IN (SELECT DISTINCT headid FROM crm_customer_group_details c WHERE c.customername like '%' || #map.line_customername:VARCHAR# || '%')</isNotEmpty>
	</sql>

	<select id="selectCrmCustomerGroup" resultMap="crmCustomerGroupResult" parameterClass="crmCustomerGroup" cacheModel="oneDayCache">
		select * from CRM_CUSTOMER_GROUP where 1 = 1
		<include refid="sf-crmCustomerGroup" />
		<isNotEmpty prepend=" and " property="map.effective_flag">
		    to_date(sysdate,'yyyy-mm-dd hh24:mi:ss') between to_date(BEGINDATE,'yyyy-mm-dd hh24:mi:ss') and to_date(nvl(ENDDATE,sysdate),'yyyy-mm-dd hh24:mi:ss')
        </isNotEmpty>
	</select>

	<select id="selectCrmCustomerGroupList" resultMap="crmCustomerGroupResultForList" parameterClass="crmCustomerGroup" cacheModel="oneDayCache">
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
		select * from CRM_CUSTOMER_GROUP where 1 = 1
		<include refid="sf-crmCustomerGroup" />
		
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>

	<select id="selectCrmCustomerGroupCount" resultClass="long" parameterClass="crmCustomerGroup" cacheModel="oneDayCache">
		select count(*) from CRM_CUSTOMER_GROUP where 1 = 1
		<include refid="sf-crmCustomerGroup" />
	</select>

	<select id="selectCrmCustomerGroupByCustomerCodeAndDeptId" resultMap="crmCustomerGroupResult3" parameterClass="crmCustomerGroup" cacheModel="oneDayCache">
		select  a.*, b.DEPTID, b.CUSTOMERID, b.CUSTOMERNAME
			from   CRM_CUSTOMER_GROUP a, crm_customer_group_details b
			where  a.ID = b.HEADID
			and    a.ISDEL = 0
			and    a.DEPTID = #map.in_dept_id# 
			and    b.CUSTOMERID = #map.customer_id# 
	</select>
	
	<select id="selectCrmCustomerGroupPaginatedList" resultMap="crmCustomerGroupResult2" parameterClass="crmCustomerGroup" cacheModel="oneDayCache">
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
			select * from (
				select a.* 
				      ,b.DEPT_NAME
				      ,(select count(1)
				        from   CRM_CUSTOMER_GROUP_DETAILS c
				        where  c.HEADID = a.ID) HOWMANY
				from   CRM_CUSTOMER_GROUP a left join KONKA_DEPT b on a.DEPTID = b.DEPT_ID
				) where 1 = 1
		<include refid="sf-crmCustomerGroup" />
		order by id desc 
		<![CDATA[ ) t_ where rownum <= (#row.first# + #row.count#)) where rn_ >= (#row.first# + 1) ]]>
	</select>

