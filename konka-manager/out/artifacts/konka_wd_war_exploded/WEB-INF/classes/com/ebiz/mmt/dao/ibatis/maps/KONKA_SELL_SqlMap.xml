<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="KONKA_SELL">

	<typeAlias alias="konkaSell" type="com.ebiz.mmt.domain.KonkaSell" />

	

	<resultMap id="konkaSellResultForList" class="konkaSell">
		<result column="S_ID" property="s_id" jdbcType="DECIMAL" />
		<result column="TITLE" property="title" jdbcType="VARCHAR" />
		<result column="CUS_SN" property="cus_sn" jdbcType="VARCHAR" />
		<result column="CUS_NAME" property="cus_name" jdbcType="VARCHAR" />
		<result column="STATE" property="state" jdbcType="DECIMAL" />
		<result column="SELL_DATE" property="sell_date" jdbcType="DATETIME" />
		<result column="ADD_USER_ID" property="add_user_id" jdbcType="DECIMAL" />
		<result column="ADD_REAL_NAME" property="add_real_name" jdbcType="VARCHAR" />
		<result column="ADD_DEPT_ID" property="add_dept_id" jdbcType="DECIMAL" />
		<result column="ADD_DEPT_NAME" property="add_dept_name" jdbcType="VARCHAR" />
		<result column="ADD_DATE" property="add_date" jdbcType="DATETIME" />
		<result column="IS_DEL" property="is_del" jdbcType="DECIMAL" />
	</resultMap>

	<resultMap id="konkaSellResult" class="konkaSell" extends="konkaSellResultForList">
	</resultMap>

	<sql id="sf-konkaSell">
		<isNotEmpty prepend=" and " property="s_id">S_ID = #s_id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="title">TITLE = #title:VARCHAR#</isNotEmpty>
		<isNotEmpty prepend=" and " property="cus_sn">CUS_SN = #cus_sn:VARCHAR#</isNotEmpty>
		<isNotEmpty prepend=" and " property="cus_name">CUS_NAME = #cus_name:VARCHAR#</isNotEmpty>
		<isNotEmpty prepend=" and " property="state">STATE = #state:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="sell_date">SELL_DATE = #sell_date:DATETIME#</isNotEmpty>
		<isNotEmpty prepend=" and " property="add_user_id">ADD_USER_ID = #add_user_id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="add_real_name">ADD_REAL_NAME = #add_real_name:VARCHAR#</isNotEmpty>
		<isNotEmpty prepend=" and " property="add_dept_id">ADD_DEPT_ID = #add_dept_id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="add_dept_name">ADD_DEPT_NAME = #add_dept_name:VARCHAR#</isNotEmpty>
		<isNotEmpty prepend=" and " property="add_date">ADD_DATE = #add_date:DATETIME#</isNotEmpty>
		<isNotEmpty prepend=" and " property="is_del">IS_DEL = #is_del:DECIMAL#</isNotEmpty>
		
		<isNotEmpty prepend=" and " property="map.r3_code_like">CUS_SN like '%' || #map.r3_code_like# || '%'</isNotEmpty>
		<isNotEmpty prepend=" and " property="map.handle_name_like">ADD_DEPT_NAME like '%' || #map.handle_name_like# || '%'</isNotEmpty>
		<isNotEmpty prepend=" and " property="map.customer_name_like">CUS_NAME like '%' || #map.customer_name_like# || '%'</isNotEmpty>
		<isNotEmpty prepend=" and " property="map.ywy_name_like">ADD_REAL_NAME like '%' || #map.ywy_name_like# || '%'</isNotEmpty>
		
		<isNotEmpty prepend=" and " property="map.add_date_start"><![CDATA[ADD_DATE >= to_date(#map.add_date_start#,'yyyy-MM-dd hh24:mi:ss')]]></isNotEmpty>
		<isNotEmpty prepend=" and " property="map.add_date_end"><![CDATA[ADD_DATE <= to_date(#map.add_date_end#,'yyyy-MM-dd hh24:mi:ss')]]></isNotEmpty>
		<isNotEmpty prepend=" and " property="map.sell_date_start"><![CDATA[SELL_DATE >= to_date(#map.sell_date_start#,'yyyy-MM-dd hh24:mi:ss')]]></isNotEmpty>
		<isNotEmpty prepend=" and " property="map.sell_date_end"><![CDATA[SELL_DATE <= to_date(#map.sell_date_end#,'yyyy-MM-dd hh24:mi:ss')]]></isNotEmpty>
		<isNotEmpty prepend=" and " property="map.sell_date_end_lt"><![CDATA[SELL_DATE < to_date(#map.sell_date_end_lt#,'yyyy-MM-dd hh24:mi:ss')]]></isNotEmpty>
		<isNotEmpty prepend=" and " property="map.state_in">
			STATE in
			<iterate close=")" open="(" conjunction="," property="map.state_in">#map.state_in[]#</iterate>
		</isNotEmpty>
		
		<!-- 查询某个部门ID,下的所有用户上传的数据 -->
		<isNotEmpty prepend=" and " property="map.is_leader_dept_id">
			ADD_USER_ID in ( 
				select k.id
				  from konka_pe_prod_user k
				 where k.dept_id in
				       (select dept_id from konka_dept d start with d.dept_id = #map.is_leader_dept_id:DECIMAL# connect by prior d.dept_id = d.par_id))
		</isNotEmpty>
		<isNotEmpty prepend=" and " property="map.cus_sn_like">CUS_SN like '%' || #map.cus_sn_like:VARCHAR# || '%'</isNotEmpty>
	</sql>

	<select id="selectKonkaSell" resultMap="konkaSellResult" parameterClass="konkaSell" >
		select * from KONKA_SELL where 1 = 1
		<include refid="sf-konkaSell" />
	</select>

	<select id="selectKonkaSellList" resultMap="konkaSellResultForList" parameterClass="konkaSell" >
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
		select * from KONKA_SELL where 1 = 1
		<include refid="sf-konkaSell" />
		<isNotEmpty property="map.s_ids" prepend=" and "> S_ID in($map.s_ids$)</isNotEmpty>
		order by s_id desc
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>

	<select id="selectKonkaSellCount" resultClass="long" parameterClass="konkaSell" >
		select count(*) from KONKA_SELL where 1 = 1
		<include refid="sf-konkaSell" />
	</select>

	<select id="selectKonkaSellPaginatedList" resultMap="konkaSellResult" parameterClass="konkaSell" >
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
		select a.* from KONKA_SELL a where 1 = 1
		<isNotEmpty prepend=" and " property="map.dept_id">a.add_dept_id in (select t.dept_id from KONKA_DEPT t  where 1 = 1
         start with dept_id =#map.dept_id#  connect by prior   t.dept_id = t.par_id ) </isNotEmpty>
		<include refid="sf-konkaSell" />
		order by s_id desc
		<![CDATA[ ) t_ where rownum <= (#row.first# + #row.count#)) where rn_ >= (#row.first# + 1) ]]>
	</select>
	
	<!-- @author Wang,Yang @version 2011-11-10 @desc 统计销售数量 -->
	<select id="selectKonkaSellCountByPd" resultClass="long" parameterClass="konkaSell" >
		select sum(b.sell_count) from KONKA_SELL a left join KONKA_SELL_DETAILS b on a.s_id = b.s_id where a.is_del = 0
		<isNotEmpty prepend=" and " property="map.pd_id">
			b.pd_id=#map.pd_id#
		</isNotEmpty>
	    <include refid="sf-konkaSell" />
	</select>
	
	<!-- @author Wang,Yang @version 2011-11-10 @desc 统计销售数量*单价 之和 -->
	<select id="selectKonkaSellCountCostByPd" resultClass="decimal" parameterClass="konkaSell" >
		select sum(b.sell_count*b.sell_money) from KONKA_SELL a left join KONKA_SELL_DETAILS b on a.s_id = b.s_id where a.is_del = 0
		<isNotEmpty prepend=" and " property="map.pd_id">
			b.pd_id=#map.pd_id#
		</isNotEmpty>
	    <include refid="sf-konkaSell" />
	</select>

	<insert id="insertKonkaSell" parameterClass="konkaSell">
		<selectKey resultClass="long" keyProperty="s_id">select KONKA_S_BASE.nextval as s_id from dual </selectKey>
		<![CDATA[insert into KONKA_SELL (]]>
		<dynamic prepend=" ">
			<isNotNull prepend="," property="s_id">S_ID</isNotNull>	
			<isNotNull prepend="," property="title">TITLE</isNotNull>	
			<isNotNull prepend="," property="cus_sn">CUS_SN</isNotNull>	
			<isNotNull prepend="," property="cus_name">CUS_NAME</isNotNull>	
			<isNotNull prepend="," property="state">STATE</isNotNull>	
			<isNotNull prepend="," property="sell_date">SELL_DATE</isNotNull>	
			<isNotNull prepend="," property="add_user_id">ADD_USER_ID</isNotNull>	
			<isNotNull prepend="," property="add_real_name">ADD_REAL_NAME</isNotNull>	
			<isNotNull prepend="," property="add_dept_id">ADD_DEPT_ID</isNotNull>	
			<isNotNull prepend="," property="add_dept_name">ADD_DEPT_NAME</isNotNull>	
			<isNotNull prepend="," property="add_date">ADD_DATE</isNotNull>	
			<isNotNull prepend="," property="is_del">IS_DEL</isNotNull>	
		</dynamic>
		<![CDATA[) values (]]>
		<dynamic prepend=" ">
			<isNotNull prepend="," property="s_id">#s_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="title">#title:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="cus_sn">#cus_sn:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="cus_name">#cus_name:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="state">#state:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="sell_date">#sell_date:DATETIME#</isNotNull>
			<isNotNull prepend="," property="add_user_id">#add_user_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="add_real_name">#add_real_name:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="add_dept_id">#add_dept_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="add_dept_name">#add_dept_name:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="add_date">#add_date:DATETIME#</isNotNull>
			<isNotNull prepend="," property="is_del">#is_del:DECIMAL#</isNotNull>
		</dynamic>
		<![CDATA[)]]>
	</insert>

	<update id="updateKonkaSell" parameterClass="KonkaSell">
		update KONKA_SELL
		<dynamic prepend="set">
			<isNotNull prepend="," property="s_id">S_ID = #s_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="title">TITLE = #title:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="cus_sn">CUS_SN = #cus_sn:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="cus_name">CUS_NAME = #cus_name:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="state">STATE = #state:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="sell_date">SELL_DATE = #sell_date:DATETIME#</isNotNull>
			<isNotNull prepend="," property="add_user_id">ADD_USER_ID = #add_user_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="add_real_name">ADD_REAL_NAME = #add_real_name:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="add_dept_id">ADD_DEPT_ID = #add_dept_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="add_dept_name">ADD_DEPT_NAME = #add_dept_name:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="add_date">ADD_DATE = #add_date:DATETIME#</isNotNull>
			<isNotNull prepend="," property="is_del">IS_DEL = #is_del:DECIMAL#</isNotNull>
			
			<isNotNull prepend="," property="map.set_sell_date_null">SELL_DATE = ''</isNotNull>
		</dynamic>
		where
		<isNotEmpty prepend=" " property="s_id">S_ID = #s_id#</isNotEmpty>
		<isEmpty prepend=" " property="s_id">
			<isNotEmpty prepend=" " property="map.pks">
				S_ID in
				<iterate close=")" open="(" conjunction="," property="map.pks">#map.pks[]#</iterate>
			</isNotEmpty>
		</isEmpty>
	</update>

	<delete id="deleteKonkaSell" parameterClass="KonkaSell">
		update KONKA_SELL set is_del = 1 where
		<isNotEmpty prepend=" " property="s_id">S_ID = #s_id#</isNotEmpty>
		<isEmpty prepend=" " property="s_id">
			<isNotEmpty prepend=" " property="map.pks">
				S_ID in
				<iterate close=")" open="(" conjunction="," property="map.pks">#map.pks[]#</iterate>
			</isNotEmpty>
		</isEmpty>
	</delete>

</sqlMap>