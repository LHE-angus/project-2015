<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
	<!-- ======================================== Form Bean Definitions -->
	<form-beans>
		<form-bean name="lazyForm" type="org.apache.struts.validator.LazyValidatorForm" />

		<form-bean name="fullLazyForm" type="org.apache.struts.validator.LazyValidatorForm">
			<form-property name="imageField" type="org.apache.struts.util.ImageButtonBean" />
			<form-property name="pager" type="com.ebiz.ssi.web.struts.bean.Pager" />
			<form-property name="pks" type="java.lang.String[]" /> 
		</form-bean>
	</form-beans>

	<global-forwards>
		<forward name="index" path="Index.do" redirect="true" />
	</global-forwards>

	<action-mappings>
		<action path="/login" attribute="loginForm" name="lazyForm" type="com.ebiz.mmt.web.struts.member.LoginAction"
			parameter="method" scope="request" validate="false">
			<forward name="success" path="/Index.do" redirect="true" />
			<forward name="login" path="/login.jsp" />
		</action>
		<action path="/Login" attribute="loginForm" name="lazyForm" type="com.ebiz.mmt.web.struts.member.LoginAction"
			parameter="method" scope="request" validate="false">
			<forward name="success" path="/Index.do" redirect="true" />
			<forward name="login" path="/login.jsp" />
		</action>
		<action path="/center/*" attribute="af" name="fullLazyForm" type="com.ebiz.mmt.web.struts.member.center.{1}Action"
			parameter="method" scope="request" validate="false">
			<forward name="index" path="/center/index.jsp" />
			<forward name="list" path="/center/{1}/list.jsp" />
			<forward name="view" path="/center/{1}/view.jsp" />
			<forward name="input" path="/center/{1}/form.jsp" />
			<forward name="search" path="/center/{1}/search.jsp" />
			<forward name="success" path="/center/{1}.do?method=list" redirect="true" />
		</action>

		<action path="/*" attribute="af" name="fullLazyForm" type="com.ebiz.mmt.web.struts.member.{1}Action"
			parameter="method" scope="request" validate="false">
			<forward name="index" path="/index.jsp" />
			<forward name="list" path="/{1}/list.jsp" />
			<forward name="view" path="/{1}/view.jsp" />
			<forward name="input" path="/{1}/form.jsp" />
			<forward name="search" path="/{1}/search.jsp" />
			<forward name="success" path="/member/{1}.do?method=list" redirect="true" /> 
		</action>
	</action-mappings>

	<!-- =================================== Message Resources Definitions -->
	<message-resources parameter="i18n/messages" />
</struts-config>