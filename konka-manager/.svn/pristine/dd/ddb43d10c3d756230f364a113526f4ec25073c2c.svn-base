<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0;user-scalable=0;" />
<link rel="stylesheet" type="text/css" href="css/common.css" />
</head>
<body>
<!--head start -->
<div class="top4">
  <div class="kjlogo"><img src="images/kj.png" width="248" height="45" /></div>
</div>
<!--head end -->
<div class="headtab4" >
  <table width="100%" class="tab2">
    <tr style="padding-top:10px">
      <td class="p10"><a id="xs"><img src="images/btn_xstj.png" width="80" height="116" /></a></td>
      <td class="p10"><a id="xsdj"><img src="images/btn_xsmx.png" width="80" height="116" /></a></td>
      <td class="p10"><a id="jp"><img src="images/btn_jp.png" width="80" height="116" /></a></td>
    </tr>
    <tr style="padding-top:10px">
      <td class="p10"><a id="xsfx"><img src="images/btn_xsfx.png" width="80" height="116" /></a></td>
      <td class="p10"><a id="login"><img src="images/system_exit.jpg" width="80" height="80" /></a></td>
      <td class="p10"><a id="tccx"><img src="images/btn_tccx.png" width="80" height="116" /></a><a ><img src="images/btn_grsd.png" width="80" height="116" style="display:none;" /></a></td>
    </tr>
    <tr style="padding-top:10px">
      <td class="p10"></td>
    </tr>    
  </table>
</div>
<script type="text/javascript" src="js/jquery-1.6.4.min.js"></script>
<script type="text/javascript" src="js/lhgdialog.min.js?skin=idialog"></script>
<script type="text/javascript" src="js/jquery.cookie.js"></script>
<script type="text/javascript" src="js/base-data.js"></script>
<script type="text/javascript">//<![CDATA[
$(document).ready(function(){
	// 浏览器参数获取用户名和密码
	var username  = getQueryString("username");
	var userpass = getQueryString("userpass");

	// 如果访问地址携带用户名和密码则初始化相关信息
	if(username == null || userpass == null || username == "null" || userpass == "null" || username == "" || userpass != ""){
		show_login();
	}

	// 销售登记
	$("#xsdj").click(function(){
		location.href = "shuj_bill_audit_wap_his.html?username=" + escape(username) + "&userpass=" + escape(userpass) + "&status=0" + "&timestamp=" + new Date().getTime();		
	});
	
	// 数据上报
	$("#xs").click(function(){
		location.href = "shuj_bill_wap_audit.html?username=" + escape(username) + "&userpass=" + escape(userpass) + "&timestamp=" + new Date().getTime();		
	});
	
	// 竞品信息
	$("#jp").click(function(){
		location.href = "jingp.html?username=" + escape(username) + "&userpass=" + escape(userpass) + "&timestamp=" + new Date().getTime();		
	});
	
	// 竞品信息
	$("#xsfx").click(function(){
		location.href = "xsfx.html?username=" + escape(username) + "&userpass=" + escape(userpass) + "&timestamp=" + new Date().getTime();		
	});
	// 提成查询
	$("#tccx").click(function(){
		location.href = "tccx.html?username=" + escape(username) + "&userpass=" + escape(userpass) + "&timestamp=" + new Date().getTime();		
	});
	// 销售登记
	$("#login").click(function(){
		show_login_allways();		
	});

	// 登陆层
	function show_login_allways(){			  
		  $.dialog({
				id: 'login-window',
				title: '登录',
				content: '帐&nbsp;&nbsp;号：<input id="login-na" type="text" maxlength="20" value="" />' + '<br /><br />密&nbsp;&nbsp;码：<input id="login-pw" type="password" maxlength="20" value="" />',
				initialize: function () {
					document.getElementById('login-na').focus();
				},
				lock: true, fixed: true, max:false, min:false,
				ok: function () {
					var na = document.getElementById('login-na');
					var pw = document.getElementById('login-pw');
					if(na.value == ""){
						alert("提示，请填写账号！");
						na.select();
						return false;
					}
					if(pw.value == ""){
						alert("提示，请填写密码！");
						pw.select();
						return false;
					}
					// 用户和密码赋值
					username = na.value;
					userpass = pw.value;
					
					// cookie,2013-06-27
					if(cookie_enable){ // 在base-data.js中定义状态
						$.cookie("cookie_name", username);	
						$.cookie("cookie_pass", userpass);	
					}
				},
				okValue: '登录',
				cancel: function () {}
			});
		}

	  
	// 登陆层
	function show_login(){	
	  // cookie, 2013-06-27
	  if(cookie_enable){ // 在base-data.js中定义状态
		  var cookie_name = $.cookie("cookie_name");	
		  var cookie_pass = $.cookie("cookie_pass");	
		  if(cookie_name != null && cookie_pass != null){
			username = cookie_name;
			userpass = cookie_pass;
			return false;
		  }
	  }	
	  
	  $.dialog({
			id: 'login-window',
			title: '登录',
			content: '帐&nbsp;&nbsp;号：<input id="login-na" type="text" maxlength="20" value="" />' + '<br /><br />密&nbsp;&nbsp;码：<input id="login-pw" type="password" maxlength="20" value="" />',
			initialize: function () {
				document.getElementById('login-na').focus();
			},
			lock: true, fixed: true, max:false, min:false,
			ok: function () {
				var na = document.getElementById('login-na');
				var pw = document.getElementById('login-pw');
				if(na.value == ""){
					alert("提示，请填写账号！");
					na.select();
					return false;
				}
				if(pw.value == ""){
					alert("提示，请填写密码！");
					pw.select();
					return false;
				}
				// 用户和密码赋值
				username = na.value;
				userpass = pw.value;
				
				// cookie,2013-06-27
				if(cookie_enable){ // 在base-data.js中定义状态
					$.cookie("cookie_name", username);	
					$.cookie("cookie_pass", userpass);	
				}
			},
			okValue: '登录',
			cancel: function () {}
		});
	}
});
//]]></script>
</body>
</html>