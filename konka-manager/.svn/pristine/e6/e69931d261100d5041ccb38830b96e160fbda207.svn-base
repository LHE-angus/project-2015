/* Global CSS */
.menu,.hotsell{width:1200px; margin:0px auto; overflow:hidden;}
.category {width:1200px; margin:0px auto;}
.nav_l{width:210px; float:left; height:40px; line-height:40px; background:#cd2a2c url(../images/pot.jpg) 185px 17px no-repeat; font-size:14px; font-weight:bold;}
.nav_r{width:952px; float:right; padding-left:38px; background:url(../images/nav_r_bg.jpg) repeat-x;}
.nav_l a{color:#fff; text-decoration:none; width:190px; padding-left:20px; height:40px; display:block;}
.nav_r ul li{float:left; padding:0px 18px; height:40px; line-height:40px; font-size:15px; font-weight:bold;}
.nav_r ul li a{color:#fff; text-decoration:none;}
.nav_r ul li a:hover{color:#fff; text-decoration:underline;}

/*left menu*/
#nav{width:206px;float:left;background:url(../images/leftmenubg.gif) no-repeat top left;border-bottom:2px #e3383b solid;padding:0 2px 2px 2px;position:relative;top:0;z-index:9998;}
#nav .mod_cate {margin:0 auto;clear:both;height:89px;padding:0;}
#nav .mod_cate h2 {margin:0 auto;clear:both;height:35px; line-height:35px; padding-left:35px; font-size:14px; font-weight:bold; color:#e3393b;}
#nav .mod_cate h2 a,#nav .mod_cate h2 a:visited {color:#e3393b;}
#nav .mod_cate h2 a:hover {color:#aa0001;text-decoration:underline;}
#nav .pingban {background:#e4f1fa url(../images/category_bg.jpg) no-repeat; background-position:10px 12px;}
#nav .dianshi {background:#e4f1fa url(../images/category_bg.jpg) no-repeat; background-position:10px -21px;}
#nav .peijian {background:#e4f1fa url(../images/category_bg.jpg) no-repeat; background-position:10px -60px;}

#nav .mod_cate_r{margin:0 auto;clear:both;}
#nav .mod_cate_r a {width:85px;padding:0 0px 4px 0px; float:left;font-size:12px;}

#nav .mod_subcate{display:none;width:598px;height:320px;border:2px #e3383b solid;background:#FFFFFF;position:absolute;top:0;z-index:9999;left:208px;overflow:hidden;}
#nav .mod_subcate dl{padding:5px 6px 3px 10px;margin-top:0;background:#ffffff;zoom:1;clear:both;font:normal 12px "宋体";}
#nav .mod_subcate dl dt{height:35px;line-height:35px;padding:0;border:none;background:none;overflow:hidden;font-weight:bold;}
#nav .mod_subcate dl dt a { color:#d80005;position:absolute;}
#nav .mod_subcate dl dd{float:left;margin:0 6px 0 0;overflow:hidden;}
#nav .mod_subcate dl dd a{color:#666;white-space:nowrap;}
#nav .mod_subcate dl dd a:hover {color:#aa0001;text-decoration:underline;}

#nav .on{padding:0;border-top:2px #e3383b solid;border-bottom:2px #e3383b solid;background:#fff;}
#nav .on h2 a{color:#e3393b;}
#nav .on .mod_subcate{display:block !important;/* !important 强制显示，否则会闪烁*/ }
#nav .on .mod_cate_r a{color:#666666;}
#nav .on .mod_cate_r a:hover {color:#aa0001;text-decoration:underline;}
#nav .on a.hot_sub{color:#FFFFFF;}

.category_l{width:206px; height:276px; float:left; border:2px #e3383b solid; border-top:none;}
.category_l dl{overflow:hidden;}
.category_l dl dt{height:35px; line-height:35px; padding-left:35px; font-size:14px; font-weight:bold; color:#e3393b;}
.category_l dl.pingban dt{background:#e4f1fa url(../images/category_bg.jpg) no-repeat; background-position:10px 12px;}
.category_l dl.dianshi dt{background:#e4f1fa url(../images/category_bg.jpg) no-repeat; background-position:10px -21px;}
.category_l dl.peijian dt{background:#e4f1fa url(../images/category_bg.jpg) no-repeat; background-position:10px -60px;}
.category_l dl dd{width:92px; padding:7px 0px 4px 9px; float:left;}
.category_r{width:980px; height:270px; float:right; margin-top:8px;}

/*本例css*/
.banner{width:990px; height:270px; position:relative; overflow:hidden;}
/*数字按钮样式*/
.banner .num { overflow:hidden; height: 22px; position: absolute; bottom:12px; right: 15px; zoom:1; z-index:3 }
.banner .num li { width: 22px; height: 22px; line-height: 22px; text-align: center; font-weight: 400; font-family: "微软雅黑", Arial; color: #FFFFFF; background:url(../images/btn2.png) no-repeat; background-position:-23px 0px; margin-right:7px; cursor:pointer; float: left; }
.banner .num li.on { background:url(../images/btn2.png) no-repeat; } /*当前项*/
/*上一个  下一个*/
.banner .prev,
.banner .next { display: none; width: 40px; height: 100px; background: url(../images/btn1.png) no-repeat; position: absolute; top: 80px;}
.banner .prev { left: 0; }
.banner .next { right: 0; background-position: right }

.hotsell{margin-top:10px;}
.hotsell_l{width:948px; float:left; border-top:2px #e2383a solid; border-left:1px #dedede solid; border-right:1px #dedede solid; border-bottom:1px #dedede solid;}
.hotsell_r{width:240px; float:right;}
.hotsell_tit{height:37px; border-bottom:1px #dedede solid; background:#f9f9f9;}
.hotsell_tit span{width:199px; margin:0px auto; background:#fff; font-size:15px; line-height:37px; text-align:center; display:block; border-left:1px #dedede solid; border-right:1px #dedede solid; border-bottom:1px #fff solid;}
.hotsell_cont{padding:23px 0px 9px 4px; overflow:hidden;}
.hotsell_cont ul{width:168px; float:left; margin:0px 9px; color:#666;}
.hotsell_cont ul li.name{padding:25px 0px 0px;}
.hotsell_cont ul li.name span{color:#ff6600;}
.hotsell_cont ul li.price b{color:#d20309; font-size:16px;}
.hotsell_cont ul li.price span{text-decoration:line-through;}
.information{width:238px; border:1px #ebebeb solid;}
.information_tit{padding:0px 10px 0px 9px; height:28px; line-height:28px; background:#f1f1f1; border-bottom:1px #ebebeb solid;}
.information_tit span{float:left; color:#aa0001; font-size:14px; font-weight:bold;}
.information_tit p{float:right;}
.information_cont{padding:8px 0px 0px 6px;}
.information_cont ul li{padding-left:12px; line-height:24px; background:url(../images/pot2.jpg) left 10px no-repeat;}
.down{margin-top:7px;}