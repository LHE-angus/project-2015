	<!-- 渠道系统已经审批完成的，并且从来没有进入 TO_DRP_ORDER的单据-->
	<select id="selectFDrpAndQdOrderList" resultMap="fDrpAndQdOrderResult" parameterClass="fromDrpOrder" cacheModel="oneDayCache">
			<![CDATA[ 
			SELECT b.TRADE_INDEX as QD_TRAN_INDEX,
			       b.AG AS R3_CODE,
			       b.DOC_TYPE,
			       b.ORDER_NUM,
			       b.GOOD_DISCOUNT_PRICE as DISCOUNT_PRICE,
			       b.MONEY AS ORDER_MONEY,
			       b.USER_NAME,
			       b.USER_ADDR,
			       b.USER_TEL,
			       b.USER_ZIP,
			       b.USER_PHONE,
			       b.REMARK,
			       b.IS_DEL,
			       b.id ,
			       a.ORDER_DATE,
			       a.FROM_DATE,
			       a.DS_ORDER_ID
			  FROM    FROM_DRP_ORDER a
			       LEFT JOIN
			          konka_order_info b
			       ON a.QD_TRAN_INDEX = b.TRADE_INDEX
			 WHERE     b.AUDIT_STATE = 3
			       AND a.DS_ORDER_ID NOT IN (SELECT distinct c.DS_ORDER_ID FROM TO_DRP_ORDER c)
			]]>
			<include refid="sf-fromDrpOrder" />
	</select>

	<select id="selectFromDrpOrderCount" resultClass="long" parameterClass="fromDrpOrder" cacheModel="oneDayCache">
		select count(*) from FROM_DRP_ORDER where 1 = 1
		<include refid="sf-fromDrpOrder" />
	</select>

	<select id="selectFromDrpOrderPaginatedList" resultMap="fromDrpOrderResult" parameterClass="fromDrpOrder" cacheModel="oneDayCache">
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
		select * from FROM_DRP_ORDER where 1 = 1
		<include refid="sf-fromDrpOrder" />
		<!-- order by ID asc -->
		<![CDATA[ ) t_ where rownum <= (#row.first# + #row.count#)) where rn_ >= (#row.first# + 1) ]]>
	</select>


