	<update id="updateEcBcompBinding" parameterClass="EcBcompBinding">
		update EC_BCOMP_BINDING
		<dynamic prepend="set">
			<isNotNull prepend="," property="goods_id">GOODS_ID = #goods_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="binding_id">BINDING_ID = #binding_id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="order_value">ORDER_VALUE = #order_value:DECIMAL#</isNotNull>
		</dynamic>
		where
		<isNotEmpty prepend=" " property="id">ID = #id#</isNotEmpty>
		<isEmpty prepend=" " property="id">
			<isNotEmpty prepend=" " property="map.pks">
				ID in
				<iterate close=")" open="(" conjunction="," property="map.pks">#map.pks[]#</iterate>
			</isNotEmpty>
		</isEmpty>
	</update>

	<delete id="deleteEcBcompBinding" parameterClass="EcBcompBinding">
		delete from EC_BCOMP_BINDING where
		<isNotEmpty prepend=" " property="goods_id">GOODS_ID = #goods_id#</isNotEmpty>
		<isNotEmpty prepend=" and " property="binding_id">BINDING_ID = #binding_id#</isNotEmpty>
		<isEmpty prepend=" " property="goods_id">
			<isNotEmpty prepend=" " property="map.pks">
				GOODS_ID in
				<iterate close=")" open="(" conjunction="," property="map.pks">#map.pks[]#</iterate>
			</isNotEmpty>
		</isEmpty>
	</delete>

</sqlMap>