		<flushOnExecute statement="insertEcBcompBinding" />
		<flushOnExecute statement="updateEcBcompBinding" />
		<flushOnExecute statement="deleteEcBcompBinding" />
	</cacheModel>

	<resultMap id="ecBcompBindingResultForList" class="ecBcompBinding">
		<result column="GOODS_ID" property="goods_id" jdbcType="DECIMAL" />
		<result column="BINDING_ID" property="binding_id" jdbcType="DECIMAL" />
		<result column="ORDER_VALUE" property="order_value" jdbcType="DECIMAL" />
	</resultMap>

	<resultMap id="ecBcompBindingResult" class="ecBcompBinding" extends="ecBcompBindingResultForList">
	</resultMap>

	<sql id="sf-ecBcompBinding">
		<isNotEmpty prepend=" and " property="goods_id">GOODS_ID = #goods_id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="binding_id">BINDING_ID = #binding_id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="order_value">ORDER_VALUE = #order_value:DECIMAL#</isNotEmpty>
	</sql>
	
	<sql id="sf-ecBcompBinding-t">
		<isNotEmpty prepend=" and " property="goods_id">t.GOODS_ID = #goods_id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="binding_id">t.BINDING_ID = #binding_id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="order_value">t.ORDER_VALUE = #order_value:DECIMAL#</isNotEmpty>
	</sql>

	<select id="selectEcBcompBinding" resultMap="ecBcompBindingResult" parameterClass="ecBcompBinding" cacheModel="oneDayCache">
		select * from EC_BCOMP_BINDING where 1 = 1
		<include refid="sf-ecBcompBinding" />
	</select>

	<select id="selectEcBcompBindingList" resultMap="ecBcompBindingResultForList" parameterClass="ecBcompBinding" cacheModel="oneDayCache">
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
		select * from EC_BCOMP_BINDING where 1 = 1
		<include refid="sf-ecBcompBinding" />
		<!-- order by ID asc -->
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>
	
	<select id="selectEcBcompBindingForFuWuTaoCanList" resultMap="ecBcompBindingResultForList" parameterClass="ecBcompBinding" cacheModel="oneDayCache">
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
			select t.* from ec_bcomp_binding t 
			left join ec_binding_pd a 
			on t.binding_id = a.id
	 		where 1=1 and a.binding_type = 0  
		<include refid="sf-ecBcompBinding-t" />
		<!-- order by ID asc -->
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>
	
	<select id="selectEcBcompBindingForPdTaoCanList" resultMap="ecBcompBindingResultForList" parameterClass="ecBcompBinding" cacheModel="oneDayCache">
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
			select t.* from ec_bcomp_binding t 
			left join ec_binding_pd a 
			on t.binding_id = a.id
	 		where 1=1 and a.binding_type = 1  
		<include refid="sf-ecBcompBinding-t" />
		<!-- order by ID asc -->
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>

	<select id="selectEcBcompBindingCount" resultClass="long" parameterClass="ecBcompBinding" cacheModel="oneDayCache">
		select count(*) from EC_BCOMP_BINDING where 1 = 1
		<include refid="sf-ecBcompBinding" />
	</select>

	<select id="selectEcBcompBindingPaginatedList" resultMap="ecBcompBindingResult" parameterClass="ecBcompBinding" cacheModel="oneDayCache">
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
		select * from EC_BCOMP_BINDING where 1 = 1
		<include refid="sf-ecBcompBinding" />
		<!-- order by ID asc -->
		<![CDATA[ ) t_ where rownum <= (#row.first# + #row.count#)) where rn_ >= (#row.first# + 1) ]]>
	</select>

	<insert id="insertEcBcompBinding" parameterClass="ecBcompBinding">
		<![CDATA[insert into EC_BCOMP_BINDING (]]>
