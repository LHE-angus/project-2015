<sqlMap namespace="SAP_EXECUTE_LOG">

	<typeAlias alias="sapExecuteLog" type="com.ebiz.mmt.domain.SapExecuteLog" />

	<cacheModel id="oneDayCache" type="OSCACHE">
		<flushInterval hours="24" />
		<flushOnExecute statement="insertSapExecuteLog" />
		<flushOnExecute statement="updateSapExecuteLog" />
		<flushOnExecute statement="deleteSapExecuteLog" />
	</cacheModel>

	<resultMap id="sapExecuteLogResultForList" class="sapExecuteLog">
		<result column="ID" property="id" jdbcType="DECIMAL" />
		<result column="FUNC" property="func" jdbcType="VARCHAR" />
		<result column="FUNC_DESC" property="func_desc" jdbcType="VARCHAR" />
		<result column="EXECUTE_YEAR" property="execute_year" jdbcType="INTEGER" />
		<result column="BEGIN_TIME" property="begin_time" jdbcType="TIMESTAMP" />
		<result column="END_TIME" property="end_time" jdbcType="TIMESTAMP" />
		<result column="COST" property="cost" jdbcType="DECIMAL" />
		<result column="OP_TYPE" property="op_type" jdbcType="VARCHAR" />
		<result column="OP_USER" property="op_user" jdbcType="INTEGER" />
	</resultMap>

	<resultMap id="sapExecuteLogResult" class="sapExecuteLog" extends="sapExecuteLogResultForList">
	</resultMap>
	
