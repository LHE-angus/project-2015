<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="JS_TIMES">

	<typeAlias alias="jsTimes" type="com.ebiz.mmt.domain.JsTimes" />

	<resultMap id="jsTimesResultForList" class="jsTimes">
		<result column="ID" property="id" jdbcType="BIGINT" />
		<result column="JS_DATE" property="js_date" jdbcType="TIMESTAMP" />
		<result column="C_ID" property="c_id" jdbcType="BIGINT" />
	</resultMap>
	
	<resultMap id="jsTimesResultForCId" class="jsTimes">
		<result column="C_ID" property="c_id" jdbcType="BIGINT" />
	</resultMap>

	<resultMap id="jsTimesResult" class="jsTimes" extends="jsTimesResultForList">
	</resultMap>
	
	<resultMap id="jsTimesResultForPaginatedList" class="jsTimes" extends="jsTimesResultForList">
		<result column="C_NAME" property="map.c_name" jdbcType="VARCHAR" />
	</resultMap>

	<sql id="sf-jsTimes">
		<isNotEmpty prepend=" and " property="id">ID = #id:BIGINT#</isNotEmpty>
		<isNotEmpty prepend=" and " property="js_date">JS_DATE = #js_date:TIMESTAMP#</isNotEmpty>
		<isNotEmpty prepend=" and " property="c_id">C_ID = #c_id:BIGINT#</isNotEmpty>
	</sql>

	<select id="selectJsTimes" resultMap="jsTimesResult" parameterClass="jsTimes">
		select * from JS_TIMES where 1 = 1
		<include refid="sf-jsTimes" />
	</select>

	<!-- 重要 js_date 必须是降序 -->
	<select id="selectJsTimesList" resultMap="jsTimesResultForList" parameterClass="jsTimes">
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
		select * from JS_TIMES where 1 = 1
		<include refid="sf-jsTimes" />
		order by JS_DATE desc
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>

	<select id="selectJsTimesCount" resultClass="long" parameterClass="jsTimes">
		select count(*) from JS_TIMES where 1 = 1
		<include refid="sf-jsTimes" />
	</select>

	<select id="selectJsTimesPaginatedList" resultMap="jsTimesResultForPaginatedList" parameterClass="jsTimes">
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
		<![CDATA[ select ID,JS_DATE,C_ID,(select k.CUSTOMER_NAME from KONKA_R3_SHOP k where k.id = c_id and rownum < 2) as c_name from JS_TIMES where 1 = 1 ]]>
		<include refid="sf-jsTimes" />
		order by JS_DATE desc
		<![CDATA[ ) t_ where rownum <= (#row.first# + #row.count#)) where rn_ >= (#row.first# + 1) ]]>
	</select>
	
	<select id="selectJsTimesListForCId" resultMap="jsTimesResultForCId" parameterClass="jsTimes">
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
		select distinct C_ID from JS_TIMES where 1 = 1
		<include refid="sf-jsTimes" />
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>

	<insert id="insertJsTimes" parameterClass="jsTimes">
		<selectKey resultClass="long" keyProperty="id">select SEQ_JS_BASE.nextval as id from dual </selectKey>
		<![CDATA[insert into JS_TIMES (]]>
		<dynamic prepend=" ">
			<isNotNull prepend="," property="id">ID</isNotNull>	
			<isNotNull prepend="," property="js_date">JS_DATE</isNotNull>	
			<isNotNull prepend="," property="c_id">C_ID</isNotNull>	
		</dynamic>
		<![CDATA[) values (]]>
		<dynamic prepend=" ">
			<isNotNull prepend="," property="id">#id:BIGINT#</isNotNull>
			<isNotNull prepend="," property="js_date">#js_date:TIMESTAMP#</isNotNull>
			<isNotNull prepend="," property="c_id">#c_id:BIGINT#</isNotNull>
		</dynamic>
		<![CDATA[)]]>
	</insert>

	<update id="updateJsTimes" parameterClass="JsTimes">
		update JS_TIMES
		<dynamic prepend="set">
			<isNotNull prepend="," property="id">ID = #id:BIGINT#</isNotNull>
			<isNotNull prepend="," property="js_date">JS_DATE = #js_date:TIMESTAMP#</isNotNull>
			<isNotNull prepend="," property="c_id">C_ID = #c_id:BIGINT#</isNotNull>
		</dynamic>
		where
		<isNotEmpty prepend=" " property="id">ID = #id#</isNotEmpty>
		<isEmpty prepend=" " property="id">
			<isNotEmpty prepend=" " property="map.pks">
				ID in
				<iterate close=")" open="(" conjunction="," property="map.pks">#map.pks[]#</iterate>
			</isNotEmpty>
		</isEmpty>
	</update>

	<delete id="deleteJsTimes" parameterClass="JsTimes">
		delete from JS_TIMES where
		<isNotEmpty prepend=" " property="id">ID = #id#</isNotEmpty>
		<isEmpty prepend=" " property="id">
			<isNotEmpty prepend=" " property="map.pks">
				ID in
				<iterate close=")" open="(" conjunction="," property="map.pks">#map.pks[]#</iterate>
			</isNotEmpty>
		</isEmpty>
	</delete>

</sqlMap>