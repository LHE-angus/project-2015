	<sql id="sf-konkaR3ShopBrand">
		<isNotEmpty prepend=" and " property="id">a.ID = #id:BIGINT#</isNotEmpty>
		<isNotEmpty prepend=" and " property="r3_shop_id">a.R3_SHOP_ID = #r3_shop_id:BIGINT#</isNotEmpty>
