	<select id="selectKonkaR3ShopBrand" resultMap="konkaR3ShopBrandResult" parameterClass="konkaR3ShopBrand" cacheModel="oneDayCache">
		select * from KONKA_R3_SHOP_BRAND a
		where 1 = 1
		<include refid="sf-konkaR3ShopBrand" />
	</select>

	<select id="selectKonkaR3ShopBrandList" resultMap="konkaR3ShopBrandResultmap" parameterClass="konkaR3ShopBrand" cacheModel="oneDayCache">
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
		select a.*,b.brand_name from KONKA_R3_SHOP_BRAND a 
		left join Konka_Mobile_Pd_Brand b on a.brand_id=b.brand_id
		where 1 = 1
		<include refid="sf-konkaR3ShopBrand" />
		<!-- order by ID asc -->
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>

	<select id="selectKonkaR3ShopBrandCount" resultClass="long" parameterClass="konkaR3ShopBrand" cacheModel="oneDayCache">
		select count(*) from KONKA_R3_SHOP_BRAND a where 1 = 1
		<include refid="sf-konkaR3ShopBrand" />
	</select>

	<select id="selectKonkaR3ShopBrandPaginatedList" resultMap="konkaR3ShopBrandResult" parameterClass="konkaR3ShopBrand" cacheModel="oneDayCache">
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
		select * from KONKA_R3_SHOP_BRAND a where 1 = 1
		<include refid="sf-konkaR3ShopBrand" />
		<!-- order by ID asc -->
		<![CDATA[ ) t_ where rownum <= (#row.first# + #row.count#)) where rn_ >= (#row.first# + 1) ]]>
	</select>

	<insert id="insertKonkaR3ShopBrand" parameterClass="konkaR3ShopBrand">
		<selectKey resultClass="long" keyProperty="id">select BASE_SEQUENCE.nextval as id from dual </selectKey>
		<![CDATA[insert into KONKA_R3_SHOP_BRAND (]]>
		<dynamic prepend=" ">
			<isNotNull prepend="," property="id">ID</isNotNull>	
			<isNotNull prepend="," property="r3_shop_id">R3_SHOP_ID</isNotNull>	
			<isNotNull prepend="," property="brand_id">BRAND_ID</isNotNull>	
			<isNotNull prepend="," property="sale_year">SALE_YEAR</isNotNull>	
			<isNotNull prepend="," property="annual_salse">ANNUAL_SALSE</isNotNull>	
			<isNotNull prepend="," property="ranks">RANKS</isNotNull>	
			<isNotNull prepend="," property="is_del">IS_DEL</isNotNull>	
			<isNotNull prepend="," property="add_date">ADD_DATE</isNotNull>	
			<isNotNull prepend="," property="add_user_id">ADD_USER_ID</isNotNull>	
			<isNotNull prepend="," property="order_value">ORDER_VALUE</isNotNull>	
		</dynamic>
		<![CDATA[) values (]]>
		<dynamic prepend=" ">
			<isNotNull prepend="," property="id">#id:BIGINT#</isNotNull>
			<isNotNull prepend="," property="r3_shop_id">#r3_shop_id:BIGINT#</isNotNull>
			<isNotNull prepend="," property="brand_id">#brand_id:BIGINT#</isNotNull>
			<isNotNull prepend="," property="sale_year">#sale_year:BIGINT#</isNotNull>
			<isNotNull prepend="," property="annual_salse">#annual_salse:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="ranks">#ranks:SMALLINT#</isNotNull>
			<isNotNull prepend="," property="is_del">#is_del:SMALLINT#</isNotNull>
			<isNotNull prepend="," property="add_date">#add_date:TIMESTAMP#</isNotNull>
			<isNotNull prepend="," property="add_user_id">#add_user_id:BIGINT#</isNotNull>
			<isNotNull prepend="," property="order_value">#order_value:BIGINT#</isNotNull>
		</dynamic>
		<![CDATA[)]]>
	</insert>

	<update id="updateKonkaR3ShopBrand" parameterClass="KonkaR3ShopBrand">
		update KONKA_R3_SHOP_BRAND
		<dynamic prepend="set">
			<isNotNull prepend="," property="id">ID = #id:BIGINT#</isNotNull>
			<isNotNull prepend="," property="r3_shop_id">R3_SHOP_ID = #r3_shop_id:BIGINT#</isNotNull>
			<isNotNull prepend="," property="brand_id">BRAND_ID = #brand_id:BIGINT#</isNotNull>
			<isNotNull prepend="," property="sale_year">SALE_YEAR = #sale_year:BIGINT#</isNotNull>
			<isNotNull prepend="," property="annual_salse">ANNUAL_SALSE = #annual_salse:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="ranks">RANKS = #ranks:SMALLINT#</isNotNull>
			<isNotNull prepend="," property="is_del">IS_DEL = #is_del:SMALLINT#</isNotNull>
			<isNotNull prepend="," property="add_date">ADD_DATE = #add_date:TIMESTAMP#</isNotNull>
			<isNotNull prepend="," property="add_user_id">ADD_USER_ID = #add_user_id:BIGINT#</isNotNull>
			<isNotNull prepend="," property="order_value">ORDER_VALUE = #order_value:BIGINT#</isNotNull>
		</dynamic>
		where
		<isNotEmpty prepend=" " property="id">ID = #id#</isNotEmpty>
		<isEmpty prepend=" " property="id">
			<isNotEmpty prepend=" " property="map.pks">
				ID in
				<iterate close=")" open="(" conjunction="," property="map.pks">#map.pks[]#</iterate>
			</isNotEmpty>
		</isEmpty>
	</update>

	<delete id="deleteKonkaR3ShopBrand" parameterClass="KonkaR3ShopBrand">
		delete from KONKA_R3_SHOP_BRAND where
		<isNotEmpty prepend=" " property="id">ID = #id#</isNotEmpty>
		<isEmpty prepend=" " property="id">
			<isNotEmpty prepend=" " property="map.pks">
				ID in
				<iterate close=")" open="(" conjunction="," property="map.pks">#map.pks[]#</iterate>
			</isNotEmpty>
		</isEmpty>
	</delete>
	
