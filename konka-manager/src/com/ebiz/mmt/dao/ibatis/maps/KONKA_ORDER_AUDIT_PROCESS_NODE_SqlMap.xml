	<select id="selectKonkaOrderAuditProcessNodeMaxLevel" resultClass="long"  parameterClass="konkaOrderAuditProcessNode" >
		select max(a.audit_level)
		  from konka_order_audit_process_node a
		 where a.is_del = 0
		   and a.audit_proces_id =
		       (select b.id
		          from konka_order_audit_process b
		         where b.is_del = 0
		           and b.add_dept_id = #map.dept_id:DECIMAL#
		           and b.process_type = (select c.process_state
		                                   from konka_order_info c
		                                  where c.id = #map.order_id:DECIMAL#))
	</select>
	
