<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="KONKA_PLAN_RATIO">

	<typeAlias alias="konkaPlanRatio" type="com.ebiz.mmt.domain.KonkaPlanRatio" />

	<cacheModel id="oneDayCache" type="OSCACHE">
		<flushInterval hours="24" />
		<flushOnExecute statement="insertKonkaPlanRatio" />
		<flushOnExecute statement="updateKonkaPlanRatio" />
		<flushOnExecute statement="deleteKonkaPlanRatio" />
	</cacheModel>

	<resultMap id="konkaPlanRatioResultForList" class="konkaPlanRatio">
		<result column="ID" property="id" jdbcType="DECIMAL" />
		<result column="Y" property="y" jdbcType="DECIMAL" />
		<result column="DEPT_SN" property="dept_sn" jdbcType="VARCHAR" />
		<result column="DEPT_NAME" property="dept_name" jdbcType="VARCHAR" />
		<result column="FGS_SN" property="fgs_sn" jdbcType="VARCHAR" />
		<result column="RATIO" property="ratio" jdbcType="DECIMAL" />
	</resultMap>

	<resultMap id="konkaPlanRatioResult" class="konkaPlanRatio" extends="konkaPlanRatioResultForList">
	</resultMap>
	
	<resultMap id="konkaPlanRatioResultForListForFgs" class="konkaPlanRatio">
		<result column="Y" property="y" jdbcType="DECIMAL" />
		<result column="FGS_SN" property="fgs_sn" jdbcType="VARCHAR" />
		<result column="FGS_NAME" property="map.fgs_name" jdbcType="VARCHAR" />
		<result column="RATIO" property="ratio" jdbcType="DECIMAL" />
	</resultMap>
	
	<resultMap id="konkaPlanRatioResultForListForJb" class="konkaPlanRatio" extends="konkaPlanRatioResultForList">
		<result column="FGS_NAME" property="map.fgs_name" jdbcType="VARCHAR" />
	</resultMap>
	
	

	<sql id="sf-konkaPlanRatio">
		<isNotEmpty prepend=" and " property="id">ID = #id:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="y">Y = #y:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="dept_sn">DEPT_SN = #dept_sn:VARCHAR#</isNotEmpty>
		<isNotEmpty prepend=" and " property="dept_name">DEPT_NAME = #dept_name:VARCHAR#</isNotEmpty>
		<isNotEmpty prepend=" and " property="fgs_sn">FGS_SN = #fgs_sn:VARCHAR#</isNotEmpty>
		<isNotEmpty prepend=" and " property="ratio">RATIO = #ratio:DECIMAL#</isNotEmpty>
	</sql>

	<select id="selectKonkaPlanRatio" resultMap="konkaPlanRatioResult" parameterClass="konkaPlanRatio" cacheModel="oneDayCache">
		select * from KONKA_PLAN_RATIO where 1 = 1
		<include refid="sf-konkaPlanRatio" />
	</select>

	<select id="selectKonkaPlanRatioList" resultMap="konkaPlanRatioResultForListForJb" parameterClass="konkaPlanRatio" cacheModel="oneDayCache">
		<isNotEmpty property="row.count">
			<![CDATA[ select * from ( ]]>
		</isNotEmpty>
		select id,y,dept_sn,dept_name,fgs_sn,ratio,(select k.dept_name from konka_dept k where k.dept_sn = fgs_sn and <![CDATA[ rownum <= 1 ]]>) as fgs_name from KONKA_PLAN_RATIO where 1 = 1
		<include refid="sf-konkaPlanRatio" />
		<!-- order by ID asc -->
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
		</isNotEmpty>
	</select>

	<select id="selectKonkaPlanRatioCount" resultClass="long" parameterClass="konkaPlanRatio" cacheModel="oneDayCache">
		select count(*) from KONKA_PLAN_RATIO where 1 = 1
		<include refid="sf-konkaPlanRatio" />
	</select>

	<select id="selectKonkaPlanRatioPaginatedList" resultMap="konkaPlanRatioResult" parameterClass="konkaPlanRatio" cacheModel="oneDayCache">
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
		select * from KONKA_PLAN_RATIO where 1 = 1
		<include refid="sf-konkaPlanRatio" />
		<!-- order by ID asc -->
		<![CDATA[ ) t_ where rownum <= (#row.first# + #row.count#)) where rn_ >= (#row.first# + 1) ]]>
	</select>
	
	<select id="selectKonkaPlanRatioListForFgs" resultMap="konkaPlanRatioResultForListForFgs" parameterClass="konkaPlanRatio" cacheModel="oneDayCache">
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
		select Y,fgs_sn,
       		(select a.dept_name from konka_dept a where fgs_sn = a.dept_sn and a.dept_type = 3) as fgs_name,
       		nvl(sum(ratio), 0) as ratio
  		from konka_plan_ratio
 		where 1 = 1
		<include refid="sf-konkaPlanRatio" />
 		group by Y,fgs_sn
 		order by fgs_name desc, fgs_sn desc
		<!-- order by ID asc -->
		<![CDATA[ ) t_ where rownum <= (#row.first# + #row.count#)) where rn_ >= (#row.first# + 1) ]]>
	</select>

	<insert id="insertKonkaPlanRatio" parameterClass="konkaPlanRatio">
		<selectKey resultClass="long" keyProperty="id">select SEQ_TASK_PARA.nextval as id from dual </selectKey>
		<![CDATA[insert into KONKA_PLAN_RATIO (]]>
		<dynamic prepend=" ">
			<isNotNull prepend="," property="id">ID</isNotNull>	
			<isNotNull prepend="," property="y">Y</isNotNull>	
			<isNotNull prepend="," property="dept_sn">DEPT_SN</isNotNull>	
			<isNotNull prepend="," property="dept_name">DEPT_NAME</isNotNull>	
			<isNotNull prepend="," property="fgs_sn">FGS_SN</isNotNull>	
			<isNotNull prepend="," property="ratio">RATIO</isNotNull>	
		</dynamic>
		<![CDATA[) values (]]>
		<dynamic prepend=" ">
			<isNotNull prepend="," property="id">#id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="y">#y:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="dept_sn">#dept_sn:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="dept_name">#dept_name:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="fgs_sn">#fgs_sn:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="ratio">#ratio:DECIMAL#</isNotNull>
		</dynamic>
		<![CDATA[)]]>
	</insert>

	<update id="updateKonkaPlanRatio" parameterClass="KonkaPlanRatio">
		update KONKA_PLAN_RATIO
		<dynamic prepend="set">
			<isNotNull prepend="," property="id">ID = #id:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="y">Y = #y:DECIMAL#</isNotNull>
			<isNotNull prepend="," property="dept_sn">DEPT_SN = #dept_sn:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="dept_name">DEPT_NAME = #dept_name:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="fgs_sn">FGS_SN = #fgs_sn:VARCHAR#</isNotNull>
			<isNotNull prepend="," property="ratio">RATIO = #ratio:DECIMAL#</isNotNull>
		</dynamic>
		where
		<isNotEmpty prepend=" " property="id">ID = #id#</isNotEmpty>
		<isEmpty prepend=" " property="id">
			<isNotEmpty prepend=" " property="map.pks">
				ID in
				<iterate close=")" open="(" conjunction="," property="map.pks">#map.pks[]#</iterate>
			</isNotEmpty>
		</isEmpty>
	</update>

	<delete id="deleteKonkaPlanRatio" parameterClass="KonkaPlanRatio">
		delete from KONKA_PLAN_RATIO where 1 = 1
		<isNotEmpty prepend=" and " property="id">ID = #id#</isNotEmpty>
		<isEmpty prepend=" " property="id">
			<isNotEmpty prepend=" and " property="map.pks">
				ID in
				<iterate close=")" open="(" conjunction="," property="map.pks">#map.pks[]#</iterate>
			</isNotEmpty>
		</isEmpty>
		<isNotEmpty prepend=" and " property="y">Y = #y:DECIMAL#</isNotEmpty>
		<isNotEmpty prepend=" and " property="dept_sn">DEPT_SN = #dept_sn:VARCHAR#</isNotEmpty>
		<isNotEmpty prepend=" and " property="fgs_sn">FGS_SN = #fgs_sn:VARCHAR#</isNotEmpty>
	</delete>

</sqlMap>