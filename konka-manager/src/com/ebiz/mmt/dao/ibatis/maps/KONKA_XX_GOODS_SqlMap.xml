		<isNotEmpty prepend=" and " property="map.add_date_end"><![CDATA[ ADD_DATE <= to_date(#map.add_date_end:VARCHAR#, 'yyyy-mm-dd hh24:mi:ss') ]]></isNotEmpty>
		
		<isNotEmpty prepend=" and " property="map.goods_id_not_eq"><![CDATA[ GOODS_ID <> #map.goods_id_not_eq:DECIMAL# ]]></isNotEmpty>
	</sql>

	<select id="selectKonkaXxGoods" resultMap="konkaXxGoodsResult" parameterClass="konkaXxGoods" >
