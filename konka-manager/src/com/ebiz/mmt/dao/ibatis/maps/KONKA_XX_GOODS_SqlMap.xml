		select * from KONKA_XX_GOODS where 1 = 1
		<include refid="sf-konkaXxGoods" />
		<!-- order by ID asc -->
		<isNotEmpty property="row.count">
			<![CDATA[ ) where rownum <= #row.count# ]]>
