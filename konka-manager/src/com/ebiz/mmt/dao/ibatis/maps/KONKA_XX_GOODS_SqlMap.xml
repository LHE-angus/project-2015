	<select id="selectKonkaXxGoodsPaginatedList" resultMap="konkaXxGoodsResult" parameterClass="konkaXxGoods" >
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
		select * from KONKA_XX_GOODS where 1 = 1
		<include refid="sf-konkaXxGoods" />
		<!-- order by ID asc -->
		<![CDATA[ ) t_ where rownum <= (#row.first# + #row.count#)) where rn_ >= (#row.first# + 1) ]]>
	</select>
	
	<!-- @author ,JiangJiaYong @version 2012-01-10  -->
	<select id="selectKonkaXxGoodsPaginatedListIncludeRelevanceInfo" resultMap="konkaXxGoodsResultIncludeRelevanceInfo" parameterClass="konkaXxGoods" >
		<![CDATA[ select * from ( select t_.*, rownum rn_ from ( ]]>
		select t1.*, t2.store_name , t3.user_name , t4.dept_name
		  from (
		  		select * from KONKA_XX_GOODS where 1 = 1
				<include refid="sf-konkaXxGoods" />
		       ) t1
		  left join konka_jxc_store_info t2
		    on t1.store = t2.id
		  left join konka_pe_prod_user t3
		    on t1.add_user_id = t3.id
		  left join konka_dept t4
		    on t1.dept_id = t4.dept_id
		<!-- order by ID asc -->
		<![CDATA[ ) t_ where rownum <= (#row.first# + #row.count#)) where rn_ >= (#row.first# + 1) ]]>
	</select>

